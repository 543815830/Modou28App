<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".usercenter.activiy.OpenDomainNameActivity">
<include layout="@layout/title_bar"/>
    <RelativeLayout
        android:orientation="horizontal"
        android:background="@drawable/et_background5"
        android:layout_margin="@dimen/distance_25"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:paddingLeft="@dimen/distance_15"
            android:layout_centerVertical="true"
            android:id="@+id/et_domain_name"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:textSize="@dimen/text_size_5"
            android:textColor="#959595"
            android:hint="@string/string_domain_input"
            tools:ignore="RelativeOverlap,RtlHardcoded,RtlSymmetry,TextFields" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:padding="@dimen/distance_15"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:background="@drawable/et_background15"
            tools:ignore="RelativeOverlap,RtlHardcoded">
            <TextView
                android:id="@+id/tv_domain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_5"
                android:textColor="#959595" />
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/distance_45"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/string_select_region"
            tools:ignore="RtlHardcoded" />
        <RadioGroup
            android:layout_weight="1"
            android:id="@+id/rg_server"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/distance_40"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/rb_south_server"
                android:textSize="@dimen/text_size_5"
                android:button="@null"
                android:drawableLeft="@drawable/rb_card_drawable_selector"
                android:drawablePadding="@dimen/distance_3"
                android:layout_marginBottom="@dimen/distance_20"
                android:textColor="#454545"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/string_south_server"
                tools:ignore="RtlHardcoded" />

            <RadioButton
                android:id="@+id/rb_east_server"
                android:textSize="@dimen/text_size_5"
                android:button="@null"
                android:layout_marginBottom="@dimen/distance_20"
                android:drawablePadding="@dimen/distance_3"
                android:drawableLeft="@drawable/rb_card_drawable_selector"
                android:textColor="#454545"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/string_east_server"
                tools:ignore="RtlHardcoded" />

            <RadioButton
                android:id="@+id/rb_north_server"
                android:textSize="@dimen/text_size_5"
                android:button="@null"
                android:drawablePadding="@dimen/distance_3"
                android:drawableLeft="@drawable/rb_card_drawable_selector"
                android:textColor="#454545"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/string_north_server"
                tools:ignore="RtlHardcoded" />

        </RadioGroup>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_south_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/distance_15"
                android:textSize="@dimen/text_size_5"
                android:layout_marginBottom="@dimen/distance_20"
                android:textColor="#37af2b"
                android:text="@string/_65ms"
                tools:ignore="RtlHardcoded" />
            <TextView
                android:id="@+id/tv_east_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/distance_15"
                android:textSize="@dimen/text_size_5"
                android:layout_marginBottom="@dimen/distance_20"
                android:textColor="#c9912f"
                android:text="@string/_148ms"
                tools:ignore="RtlHardcoded" />
            <TextView
                android:id="@+id/tv_north_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/distance_15"
                android:textSize="@dimen/text_size_5"
                android:textColor="#cd3a48"
                android:text="@string/_85163ms"
                tools:ignore="RtlHardcoded" />
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/distance_45"
        android:layout_marginRight="@dimen/distance_45"
        android:layout_marginBottom="@dimen/distance_40"
        android:layout_height="wrap_content">
   <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
       android:layout_alignParentLeft="true"
       android:textColor="#454545"
       android:text="@string/string_open_time"
       android:textSize="@dimen/text_size_5"
       tools:ignore="RtlHardcoded" />
        <LinearLayout
            android:id="@+id/ll_time"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            tools:ignore="RelativeOverlap,RtlHardcoded,UseCompoundDrawables">
            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#454545"
                android:text="一个月"
                android:layout_marginRight="@dimen/distance_20"
                android:textSize="@dimen/text_size_5"/>
            <ImageView
                android:id="@+id/iv_down_arrow"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/down_arrow"
                tools:ignore="ContentDescription" />
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginBottom="@dimen/distance_40"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/distance_45"
        android:layout_marginRight="@dimen/distance_45"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:textColor="#454545"
            android:text="@string/string_use_coins"
            android:textSize="@dimen/text_size_5"
            tools:ignore="RtlHardcoded" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            tools:ignore="RelativeOverlap,RtlHardcoded">
            <TextView
                android:id="@+id/clear_coins"
                android:text="11,000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/StatusFColor"
                android:textSize="@dimen/text_size_5"/>
        </LinearLayout>
    </RelativeLayout>
    <Button
        android:id="@+id/commit"
        android:layout_marginBottom="@dimen/distance_25"
        android:layout_marginLeft="@dimen/distance_25"
        android:layout_marginRight="@dimen/distance_25"
        android:background="@drawable/login_btn_background"
        android:textSize="@dimen/text_size_6"
        android:textColor="@color/tv_fp_color"
        android:layout_width="match_parent"
        android:layout_height="@dimen/distance_45"
        android:text="@string/string_open"/>
</LinearLayout>
