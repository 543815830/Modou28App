<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_rank"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/StatusFColor"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_rank"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="@dimen/distance_48"
            android:text="@string/ranking_list"
            android:textSize="@dimen/text_size_8"
            android:textColor="@color/tv_fp_color"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <android.support.design.widget.TabLayout
            android:id="@+id/tayLayout"
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="@dimen/distance_45"
            app:tabIndicatorColor="#339ef9"
            app:tabIndicatorHeight="@dimen/distance_1"
            app:tabSelectedTextColor="#339ef9"
            app:tabTextAppearance="@style/TabLayoutTextStyle1"
            app:tabTextColor="#454545"/>
        <view
            android:layout_marginTop="@dimen/distance_5"
            android:id="@+id/rank_vp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/distance_0"
            android:layout_weight="1"
            class="android.support.v4.view.ViewPager" />

    </LinearLayout>
</LinearLayout>