<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/ll_pop_game">
    <include layout="@layout/title_bar3"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:background="#ffffff"
        android:gravity="center"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="@dimen/distance_175"
            android:layout_height="wrap_content"
            android:padding="@dimen/distance_5"
            android:layout_marginTop="@dimen/distance_5"
            android:layout_marginBottom="@dimen/distance_5"
            android:background="@drawable/et_background21"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_search"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/search"/>
            <EditText
                android:id="@+id/serch_et"
                android:layout_toRightOf="@+id/iv_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="@dimen/text_size_3"
                android:textColor="#cadceb"
                android:background="@null"
                android:hint="搜索游戏"/>
            <ImageView
                android:id="@+id/iv_x"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/x"/>
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#eeeeee"
                android:orientation="vertical">
                <ListView
                    android:id="@+id/total_game_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#ffffff"
                    android:divider="#ffffff"
                    android:dividerHeight="0dip"
                    android:listSelector="@android:color/transparent">
                </ListView>
            </LinearLayout>
        <com.ruixin.administrator.ruixinapplication.utils.LetterIndexView
            android:id="@+id/letter_index_view"
            android:layout_marginTop="@dimen/distance_15"
            android:layout_width="@dimen/distance_50"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"/>
        <TextView
            android:layout_toLeftOf="@+id/letter_index_view"
            android:id="@+id/show_letter_in_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:textSize="@dimen/text_size_6"
            android:background="@mipmap/zoom"
            android:gravity="center"
            android:visibility="gone"/>
    </RelativeLayout>


</LinearLayout>