<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/ll_auto_bet"
    android:orientation="vertical">
    <include layout="@layout/title_bar" />

    <include layout="@layout/count_down_bar" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/center_bar" />
            <FrameLayout
                android:id="@+id/fl_game_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:background="#ffffff"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:background="@drawable/et_background30"
                        android:gravity="center_vertical"
                        android:layout_height="@dimen/distance_30">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#959595"
                            android:textSize="@dimen/text_size_3"
                            android:layout_marginLeft="@dimen/distance_12_5"
                            android:text="自动投注方案管理"/>
                        <TextView
                            android:id="@+id/tv_warning"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/holo_red_light"
                            android:textSize="@dimen/text_size_1"
                            android:singleLine="true"
                            android:ellipsize="marquee"
                            android:layout_marginLeft="@dimen/distance_3"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:marqueeRepeatLimit="marquee_forever"
                            android:text="注意：网站根据您的要求，开奖后2分钟自动帮您投注。完成以下设置即可开始自动投注，而且您随时可以停止自动投注。" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:background="#f2f2f2"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <RadioGroup
                            android:id="@+id/rg_auto"
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:layout_height="@dimen/distance_40">
                            <RadioButton
                                android:id="@+id/rb_add_scheme"
                                android:layout_width="@dimen/distance_0"
                                android:gravity="center"
                                android:layout_weight="1"
                                android:background="@drawable/tab_rb_selector4"
                                android:button="@null"
                                android:textColor="@drawable/auto_textcolor_selector"
                                android:layout_height="match_parent"
                                android:text="添加新方案"/>
                            <View
                                android:layout_width="@dimen/distance_1"
                                android:background="#dbdbdb"
                                android:layout_height="@dimen/distance_30"/>
                            <RadioButton
                                android:id="@+id/rb_update_scheme"
                                android:layout_width="@dimen/distance_0"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:background="@drawable/tab_rb_selector4"
                                android:button="@null"
                                android:textColor="@drawable/auto_textcolor_selector"
                                android:layout_height="match_parent"
                                android:text="修改现有方案"/>
                        </RadioGroup>
                        <LinearLayout
                            android:id="@+id/ll_auto_info"
                            android:layout_width="match_parent"
                            android:minHeight="@dimen/distance_270"
                            android:orientation="vertical"
                            android:layout_height="match_parent">

                  <LinearLayout
                      android:id="@+id/ll_choose_scheme"
                      android:layout_width="match_parent"
                      android:visibility="gone"
                      android:background="#ffffff"
                      android:layout_marginTop="@dimen/distance_15"
                      android:layout_height="@dimen/distance_45">
                     <TextView
                         android:layout_width="match_parent"
                         android:layout_height="match_parent"
                         android:textSize="@dimen/text_size_5"
                         android:layout_marginLeft="@dimen/distance_25"
                         android:layout_marginRight="@dimen/distance_15"
                         android:textStyle="bold"
                         android:gravity="center_vertical"
                         android:textColor="@color/StatusFColor"
                         android:drawableRight="@mipmap/down_jiantou"
                         android:text="选择方案"/>
                  </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_marginTop="@dimen/distance_15"
                            android:layout_marginBottom="@dimen/distance_15"
                            android:layout_marginLeft="@dimen/distance_25"
                            android:layout_marginRight="@dimen/distance_25"
                            android:orientation="vertical"
                            android:background="@drawable/et_background5"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="horizontal"
                                android:background="@drawable/et_background29"
                                android:gravity="center_vertical"
                                android:layout_height="@dimen/distance_45">
                                <TextView
                                    style="@style/check_number_tv1"
                                    android:text="方案名称"/>
                                <EditText
                                    android:id="@+id/et_trustee_name"
                                    style="@style/check_number_et1"
                                    android:hint="请输入方案名称" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="horizontal"
                                android:background="@drawable/et_background29"
                                android:gravity="center_vertical"
                                android:layout_height="@dimen/distance_45">
                                <TextView
                                    style="@style/check_number_tv1"
                                    android:text="开始期数"/>
                                <EditText
                                    android:id="@+id/et_start_no"
                                    style="@style/check_number_et1"
                                    android:text="12345"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="horizontal"
                                android:background="@drawable/et_background29"
                                android:gravity="center_vertical"
                                android:layout_height="@dimen/distance_45">
                                <TextView
                                    style="@style/check_number_tv1"
                                    android:text="结束期数"/>
                                <EditText
                                    android:id="@+id/et_end_no"
                                    style="@style/check_number_et1"
                                    android:text="12345"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="horizontal"
                                android:background="@drawable/et_background29"
                                android:gravity="center_vertical"
                                android:layout_height="@dimen/distance_45">
                                <TextView
                                    android:id="@+id/tv_up"
                                    style="@style/check_number_tv1"
                                    android:text="金币上限"/>
                                <EditText
                                    android:id="@+id/et_points_up"
                                    style="@style/check_number_et1"
                                    android:hint="0表示不限制"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="horizontal"
                                android:background="@drawable/et_background29"
                                android:gravity="center_vertical"
                                android:layout_height="@dimen/distance_45">
                                <TextView
                                    android:id="@+id/tv_down"
                                    style="@style/check_number_tv1"
                                    android:text="金币下限"/>
                                <EditText
                                    android:id="@+id/et_points_down"
                                    style="@style/check_number_et1"
                                    android:hint="0表示不限制"/>
                            </LinearLayout>
                            <RelativeLayout
                                android:id="@+id/rl_mode"
                                android:layout_width="match_parent"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:layout_height="@dimen/distance_45">
                                <TextView
                                    android:id="@+id/start_mode"
                                    android:layout_alignParentLeft="true"
                                    android:layout_centerVertical="true"
                                    style="@style/check_number_tv1"
                                    android:text="开始模式"/>
                                <TextView
                                    android:id="@+id/tv_start_mode"
                                    android:layout_toRightOf="@+id/start_mode"
                                    android:layout_centerVertical="true"
                                    style="@style/check_number_et1"
                                    android:text="我的模式"/>
                                <TextView
                                    android:id="@+id/tv_start_mode_id"
                                    android:visibility="gone"
                                    style="@style/check_number_et1"
                                    android:text="我的模式"/>
                                <ImageView
                                    android:id="@+id/iv_down_arrow"
                                    android:layout_width="wrap_content"
                                    android:layout_marginRight="@dimen/distance_12_5"
                                    android:layout_alignParentRight="true"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/down_arrow"/>
                            </RelativeLayout>

                        </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:background="@drawable/et_background30"
                        android:layout_height="@dimen/distance_15">
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:background="#f2f2f2"
                        android:layout_height="@dimen/distance_30">
                        <LinearLayout
                            android:layout_width="@dimen/distance_0"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_height="match_parent">
                            <TextView
                                style="@style/check_number_tv2"
                                android:text="模式"/>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="@dimen/distance_0"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_height="match_parent">
                            <TextView
                                style="@style/check_number_tv2"
                                android:text="投注额"/>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="@dimen/distance_0"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_height="match_parent">
                            <TextView
                                style="@style/check_number_tv2"
                                android:text="赢后使用"/>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="@dimen/distance_0"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_height="match_parent">
                            <TextView
                                style="@style/check_number_tv2"
                                android:text="输后使用"/>

                        </LinearLayout>
                    </LinearLayout>

                    <ListView
                        android:id="@+id/auto_bet_lv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    </ListView>
                  <!--<RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/distance_30">
                        <Button
                            android:id="@+id/add_mode"
                            android:layout_alignParentRight="true"
                            android:background="@android:color/holo_red_light"
                            android:textColor="#ffffff"
                            android:layout_marginRight="@dimen/distance_25"
                            android:textSize="@dimen/text_size_5"
                            android:text="增添模式"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent" />
                    </RelativeLayout>-->
                        </LinearLayout>
                    </LinearLayout>
                    <Button
                        android:id="@+id/start"
                        android:layout_marginTop="@dimen/distance_15"
                        android:layout_marginBottom="@dimen/distance_25"
                        android:layout_marginLeft="@dimen/distance_25"
                        android:layout_marginRight="@dimen/distance_25"
                        android:background="@drawable/login_btn_background"
                        android:textSize="@dimen/text_size_6"
                        android:textColor="@color/tv_fp_color"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/distance_45"
                        android:text="开始自动投注"/>
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>