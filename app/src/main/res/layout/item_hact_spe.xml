        android:orientation="vertical"
        android:gravity="center"
        tools:ignore="RtlHardcoded">
            <ImageView
                android:id="@+id/ic_act"
                android:layout_width="@dimen/distance_137_5"
                android:layout_height="@dimen/distance_85"
