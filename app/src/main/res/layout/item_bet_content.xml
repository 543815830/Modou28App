<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/distance_15"
        android:layout_marginRight="@dimen/distance_15"
        android:layout_marginBottom="@dimen/distance_7_5"
        android:paddingLeft="@dimen/distance_12_5"
        android:paddingRight="@dimen/distance_12_5"
        android:orientation="horizontal"
        android:background="@drawable/et_background4"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="@dimen/distance_0"
            android:layout_weight="2"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/bet_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#454545"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/distance_13_5"
                android:layout_marginBottom="@dimen/distance_6"
                android:textSize="@dimen/text_size_6"
                android:text="投注号码：豹"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_cb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#454545"
                    android:layout_marginBottom="@dimen/distance_6"
                    android:textSize="@dimen/text_size_3"
                    android:text="投注金币："/>
                <TextView
                    android:id="@+id/bet_coins"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ff0000"
                    android:layout_marginBottom="@dimen/distance_6"
                    android:textSize="@dimen/text_size_3"
                    android:text="100"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#454545"
                    android:layout_marginBottom="@dimen/distance_6"
                    android:textSize="@dimen/text_size_4"
                    android:text="标准赔率："/>
                <TextView
                    android:id="@+id/stand_peilv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ff0000"
                    android:layout_marginBottom="@dimen/distance_6"
                    android:textSize="@dimen/text_size_4"
                    android:text="10000"/>
            </LinearLayout>

         <LinearLayout
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:orientation="horizontal">
             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:textColor="#454545"
                 android:layout_marginBottom="@dimen/distance_13_5"
                 android:textSize="@dimen/text_size_4"
                 android:text="开奖赔率："/>
             <TextView
                 android:id="@+id/open_peilv"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:textColor="#ff0000"
                 android:layout_marginBottom="@dimen/distance_13_5"
                 android:textSize="@dimen/text_size_4"
                 android:text="16.99"/>
         </LinearLayout>


        </LinearLayout>
         <LinearLayout
            android:layout_width="@dimen/distance_0"
            android:layout_weight="1"
             android:gravity="center"
            android:layout_height="match_parent">
             <TextView
                 android:id="@+id/open_coins"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:textColor="@color/StatusFColor"
                 android:drawableLeft="@mipmap/touzhuxiangqing_icon"
                 android:drawablePadding="@dimen/distance_10"
                 android:textStyle="bold"
                 android:textSize="@dimen/text_size_20"
                 android:text="+100"/>

         </LinearLayout>

    </LinearLayout>

</LinearLayout>