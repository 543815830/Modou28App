<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/ll_auto_bet"
    android:orientation="vertical">
    <include layout="@layout/title_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <FrameLayout
                android:id="@+id/fl_game_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:background="#ffffff"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:background="#f2f2f2"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_marginTop="@dimen/distance_15"
                            android:layout_marginBottom="@dimen/distance_15"
                            android:layout_marginLeft="@dimen/distance_25"
                            android:layout_marginRight="@dimen/distance_25"
                            android:orientation="vertical"
                            android:background="@drawable/et_background5"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="horizontal"
                                android:background="@drawable/et_background29"
                                android:gravity="center_vertical"
                                android:layout_height="@dimen/distance_45">
                                <TextView
                                    style="@style/check_number_tv1"
                                    android:text="方案名称"/>
                                <TextView
                                    android:id="@+id/et_trustee_name"
                                    style="@style/check_number_et1"
                                    android:text="12345"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="horizontal"
                                android:background="@drawable/et_background29"
                                android:gravity="center_vertical"
                                android:layout_height="@dimen/distance_45">
                                <TextView
                                    style="@style/check_number_tv1"
                                    android:text="开始期数"/>
                                <TextView
                                    android:id="@+id/et_start_no"
                                    style="@style/check_number_et1"
                                    android:text="12345"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="horizontal"
                                android:background="@drawable/et_background29"
                                android:gravity="center_vertical"
                                android:layout_height="@dimen/distance_45">
                                <TextView
                                    style="@style/check_number_tv1"
                                    android:text="结束期数"/>
                                <TextView
                                    android:id="@+id/et_end_no"
                                    style="@style/check_number_et1"
                                    android:text="12345"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="horizontal"
                                android:background="@drawable/et_background29"
                                android:gravity="center_vertical"
                                android:layout_height="@dimen/distance_45">
                                <TextView
                                    android:id="@+id/tv_up"
                                    style="@style/check_number_tv1"
                                    android:text="金币上限"/>
                                <TextView
                                    android:id="@+id/et_points_up"
                                    style="@style/check_number_et1"
                                    android:text="12345"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="horizontal"
                                android:background="@drawable/et_background29"
                                android:gravity="center_vertical"
                                android:layout_height="@dimen/distance_45">
                                <TextView
                                    android:id="@+id/tv_down"
                                    style="@style/check_number_tv1"
                                    android:text="金币下限"/>
                                <TextView
                                    android:id="@+id/et_points_down"
                                    style="@style/check_number_et1"
                                    android:text="12345"/>
                            </LinearLayout>
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:layout_height="@dimen/distance_45">
                                <TextView
                                    android:id="@+id/start_mode"
                                    android:layout_alignParentLeft="true"
                                    android:layout_centerVertical="true"
                                    style="@style/check_number_tv1"
                                    android:text="起始模式"/>
                                <TextView
                                    android:id="@+id/tv_start_mode"
                                    android:layout_toRightOf="@+id/start_mode"
                                    android:layout_centerVertical="true"
                                    style="@style/check_number_et1"
                                    android:text="全包"/>
                            </RelativeLayout>
                          <!--  <Button
                                android:id="@+id/save"
                                android:layout_marginTop="@dimen/distance_15"
                                android:layout_marginBottom="@dimen/distance_25"
                                android:layout_marginLeft="@dimen/distance_25"
                                android:layout_marginRight="@dimen/distance_25"
                                android:background="@drawable/login_btn_background"
                                android:textSize="@dimen/text_size_6"
                                android:textColor="@color/tv_fp_color"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/distance_45"
                                android:text="保存"/>-->
                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:background="@drawable/et_background30"
                        android:layout_height="@dimen/distance_15">
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:background="#f2f2f2"
                        android:layout_height="@dimen/distance_30">
                        <LinearLayout
                            android:layout_width="@dimen/distance_0"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_height="match_parent">
                            <TextView
                                style="@style/check_number_tv2"
                                android:text="模式"/>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="@dimen/distance_0"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_height="match_parent">
                            <TextView
                                style="@style/check_number_tv2"
                                android:text="赢后"/>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="@dimen/distance_0"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_height="match_parent">
                            <TextView
                                style="@style/check_number_tv2"
                                android:text="输后"/>
                        </LinearLayout>
                    </LinearLayout>
                    <ListView
                        android:id="@+id/trustee_bet_lv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    </ListView>
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>