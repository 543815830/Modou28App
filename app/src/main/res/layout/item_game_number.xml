<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_game_number"
        android:layout_width="match_parent"
        android:layout_height="@dimen/distance_60">

        <LinearLayout
            android:layout_width="@dimen/distance_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
            <TextView
                android:id="@+id/tv_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/et_background26"
                android:gravity="center"
                android:text="9"
                android:textColor="#ffffff"
                android:textSize="@dimen/text_size_5" />
            <ImageView
                android:visibility="gone"
                android:id="@+id/iv_1"
                android:layout_width="@dimen/distance_20"
                android:layout_height="@dimen/distance_20" />
            <ImageView
                android:visibility="gone"
                android:id="@+id/iv_2"
                android:layout_width="@dimen/distance_20"
                android:layout_height="@dimen/distance_20" />
            <ImageView
                android:id="@+id/iv_3"
                android:visibility="gone"
                android:layout_width="@dimen/distance_20"
                android:layout_height="@dimen/distance_20" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/distance_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
            <TextView
                android:id="@+id/tv_peilv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="100.23"
                android:textColor="#959595"
                android:textSize="@dimen/text_size_3" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/distance_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/distance_30"
                android:layout_marginLeft="@dimen/distance_5"
                android:layout_marginRight="@dimen/distance_5"
                android:background="@drawable/et_background27">

                <TextView
                    android:id="@+id/tv_sub"
                    android:visibility="gone"
                    android:layout_width="@dimen/distance_0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#c5c5c5"
                    android:gravity="center"
                    android:text="-"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/text_size_3" />

                <EditText
                    android:id="@+id/et_points"
                    android:paddingLeft="@dimen/distance_3"
                    android:layout_width="@dimen/distance_0"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@null"
                    android:text=""
                    android:textColor="#c5c5c5"
                    android:textSize="@dimen/text_size_3" />

                <TextView
                    android:id="@+id/tv_add"
                    android:visibility="gone"
                    android:layout_width="@dimen/distance_0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#c5c5c5"
                    android:gravity="center"
                    android:text="+"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/text_size_3" />

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_mybetpoints"
            android:layout_width="@dimen/distance_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
            <TextView
                android:id="@+id/tv_mybet_points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="100000000"
                android:textColor="#959595"
                android:textSize="@dimen/text_size_3" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="@dimen/distance_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
            <Button
                android:id="@+id/btn_multiple"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/distance_30"
                android:layout_marginLeft="@dimen/distance_15"
                android:layout_marginRight="@dimen/distance_15"
                android:background="@drawable/et_background28"
                android:text="倍数"
                android:textColor="#ffbd3d"
                android:textSize="@dimen/text_size_3" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>