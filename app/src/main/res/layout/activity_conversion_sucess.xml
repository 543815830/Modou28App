<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ruixin.administrator.ruixinapplication.exchangemall.activity.ConversionSucessActivity">
    <include layout="@layout/title_bar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/tips"/>
        <TextView
            android:layout_marginTop="@dimen/distance_13"
            android:layout_marginBottom="@dimen/distance_13"
            android:layout_width="wrap_content"
            android:textSize="@dimen/text_size_19"
            android:textColor="@color/StatusFColor"
            android:text="兑换成功"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_conversion_notice"
            android:layout_width="wrap_content"
            android:textColor="#454545"
            android:textSize="@dimen/text_size_1"
            android:maxEms="11"
            android:paddingBottom="@dimen/distance_9"
            android:text="奖品会在规定时间内发出"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_know"
            android:layout_width="wrap_content"
            android:paddingBottom="@dimen/distance_10"
            android:paddingTop="@dimen/distance_10"
            android:paddingLeft="@dimen/distance_25"
            android:paddingRight="@dimen/distance_25"
            android:background="@drawable/login_btn_background"
            android:textSize="@dimen/text_size_19"
            android:textColor="#ffffff"
            android:text="我知道了"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>
