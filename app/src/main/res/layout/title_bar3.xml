<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_title_bar_3"
    android:layout_width="match_parent"
    android:layout_height="@dimen/distance_48"
    android:background="@color/StatusFColor"
    android:orientation="horizontal">
    <LinearLayout
        android:id="@+id/close_arrow"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:layout_width="@dimen/distance_48"
        android:gravity="center"
        android:layout_height="match_parent"
        tools:ignore="RtlHardcoded">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/distance_18"
            android:layout_marginLeft="@dimen/distance_18"
            android:src="@drawable/close"
            tools:ignore="ContentDescription,RtlHardcoded" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_title"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_8"
        android:textColor="@color/tv_fp_color"
        tools:ignore="RtlHardcoded" />

</RelativeLayout>