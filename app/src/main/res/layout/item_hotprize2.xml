<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/distance_13"
    android:layout_marginRight="@dimen/distance_13"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/distance_10"
        android:layout_marginBottom="@dimen/distance_15"
        android:layout_marginLeft="@dimen/distance_13"
        android:layout_marginRight="@dimen/distance_13"
        android:background="#ffffff"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/ic_hot_prize"
            android:layout_marginTop="@dimen/distance_5"
            android:layout_width="match_parent"
            android:layout_height="@dimen/distance_100"
            tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/title_hot_prize"
                android:layout_marginLeft="@dimen/distance_13"
                android:layout_marginTop="@dimen/distance_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#454545"
                android:maxLines="2"
                android:minLines="2"
                android:ellipsize="end"
                android:textSize="@dimen/text_size_3"
                tools:ignore="RtlHardcoded" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/price_hot_prize"
                android:layout_marginLeft="@dimen/distance_13"
                android:layout_marginTop="@dimen/distance_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/price_hot_number"
                android:layout_centerVertical="true"
                android:textColor="#e52727"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="@dimen/text_size_4"
                tools:ignore="RtlHardcoded" />
            <TextView
                android:id="@+id/price_hot_number"
                android:layout_marginLeft="@dimen/distance_13"
                android:layout_marginTop="@dimen/distance_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="#959595"
                android:textSize="@dimen/text_size_2"
                tools:ignore="RtlHardcoded" />
        </RelativeLayout>

    </LinearLayout>



</RelativeLayout>