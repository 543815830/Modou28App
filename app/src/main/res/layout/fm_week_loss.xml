<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<LinearLayout

    android:layout_width="match_parent"
    android:background="#f2f2f2"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_marginTop="@dimen/distance_5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="vertical">
        <TextView
            android:layout_marginLeft="@dimen/distance_10"
            android:layout_marginTop="@dimen/distance_20"
            android:paddingLeft="@dimen/distance_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/et_background11"
            android:textSize="@dimen/text_size_6"
            android:textColor="#454545"
            android:text="周亏损返利" />
        <LinearLayout
            android:layout_marginTop="@dimen/distance_30"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="@dimen/distance_0"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/loss_total_coin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/StatusFColor"
                    android:textSize="@dimen/text_size_30"
                    android:layout_marginBottom="@dimen/distance_15"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#454545"
                    android:textSize="@dimen/text_size_5"
                    android:text="上周亏损金额(金币）" />

            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="@dimen/distance_0"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/week_total_coin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/StatusFColor"
                    android:textSize="@dimen/text_size_30"
                    android:layout_marginBottom="@dimen/distance_15"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#454545"
                    android:textSize="@dimen/text_size_5"
                    android:text="本周共可领取（金币）" />

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/distance_30"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="@dimen/distance_0"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/shengyu_loss_coin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/StatusFColor"
                    android:textSize="@dimen/text_size_30"
                    android:layout_marginBottom="@dimen/distance_15"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#454545"
                    android:textSize="@dimen/text_size_5"
                    android:text="剩余可领取返利(金币）" />

            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="@dimen/distance_0"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/today_total_coin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/StatusFColor"
                    android:textSize="@dimen/text_size_30"
                    android:layout_marginBottom="@dimen/distance_15"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#454545"
                    android:textSize="@dimen/text_size_5"
                    android:text="今天可领取（金币）" />

            </LinearLayout>

        </LinearLayout>
        <Button
            android:id="@+id/commit"
            android:layout_gravity="center"
            android:background="@drawable/button_selector5"
            android:textSize="@dimen/text_size_6"
            android:layout_marginTop="@dimen/distance_43"
            android:layout_marginBottom="@dimen/distance_40"
            android:textColor="@color/tv_fp_color"
            android:layout_width="@dimen/distance_175"
            android:layout_height="@dimen/distance_45"
            android:text="@string/string_commit_get"/>
        <TextView
            android:id="@+id/loss_fanli_lilv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_1"
            android:layout_marginLeft="@dimen/distance_15"
            android:layout_marginBottom="@dimen/distance_9"
            android:lineSpacingExtra="@dimen/distance_9"
            android:textColor="@color/StatusFColor"
            android:text="        注：魔豆28全新推出新的工资系统，通过您的下线连接注册的用户，当天亏损后，您可以于第二天领取亏损的2.0000%的返利。请及时领取，逾期将无法领取。" />

    </LinearLayout>
<LinearLayout
    android:id="@+id/ll_fanli"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <TextView
        android:layout_marginTop="@dimen/distance_9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_3"
        android:layout_marginLeft="@dimen/distance_15"
        android:layout_marginBottom="@dimen/distance_9"
        android:lineSpacingExtra="@dimen/distance_9"
        android:textColor="#454545"
        android:text="您的返利比例根据您上周游戏流水除以亏损额的倍数而决定" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/distance_15"
        android:layout_marginLeft="@dimen/distance_15"
        android:gravity="center"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:background="@drawable/et_background7"
            android:gravity="center"
            android:layout_height="@dimen/distance_44">
            <LinearLayout
                style="@style/ll_offline_vip">
                <TextView
                    style="@style/tv_offline_vip"
                    android:text="倍数"/>
            </LinearLayout>
            <LinearLayout
                style="@style/ll_offline_vip">
                <TextView
                    style="@style/tv_offline_vip"
                    android:text="返利比例"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:background="@drawable/et_background6"
            android:gravity="center"
            android:layout_height="@dimen/distance_44">
            <LinearLayout
                style="@style/ll_offline_vip">
                <TextView
                    style="@style/tv_offline_vip"
                    android:text="默认比例"
                    android:textColor="#339ef9" />
            </LinearLayout>
            <LinearLayout
                style="@style/ll_offline_vip">
                <TextView
                    android:id="@+id/tv_moren"
                    style="@style/tv_offline_vip"
                    android:textColor="#339ef9" />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:background="@drawable/et_background9"
            android:gravity="center"
            android:layout_height="@dimen/distance_44">
            <LinearLayout
                style="@style/ll_offline_vip">
                <TextView
                    style="@style/tv_offline_vip"
                    android:text="0倍～1倍"
                    android:textColor="#339ef9" />
            </LinearLayout>
            <LinearLayout
                style="@style/ll_offline_vip">
                <TextView
                    android:id="@+id/tv_0_1"
                    style="@style/tv_offline_vip"
                    android:textColor="#339ef9" />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:background="@drawable/et_background6"
            android:gravity="center"
            android:layout_height="@dimen/distance_44">
            <LinearLayout
                style="@style/ll_offline_vip">
                <TextView
                    style="@style/tv_offline_vip"
                    android:text="1倍～2倍"
                    android:textColor="#339ef9" />
            </LinearLayout>
            <LinearLayout
                style="@style/ll_offline_vip">
                <TextView
                    android:id="@+id/tv_1_2"
                    style="@style/tv_offline_vip"
                    android:textColor="#339ef9" />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:background="@drawable/et_background9"
            android:gravity="center"
            android:layout_height="@dimen/distance_44">
            <LinearLayout
                style="@style/ll_offline_vip">
                <TextView
                    style="@style/tv_offline_vip"
                    android:text="2倍～3倍"
                    android:textColor="#339ef9" />
            </LinearLayout>
            <LinearLayout
                style="@style/ll_offline_vip">
                <TextView
                    android:id="@+id/tv_2_3"
                    style="@style/tv_offline_vip"
                    android:textColor="#339ef9" />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:background="@drawable/et_background6"
            android:gravity="center"
            android:layout_height="@dimen/distance_44">
            <LinearLayout
                style="@style/ll_offline_vip">
                <TextView
                    style="@style/tv_offline_vip"
                    android:text="3倍～4倍"
                    android:textColor="#339ef9" />
            </LinearLayout>
            <LinearLayout
                style="@style/ll_offline_vip">
                <TextView
                    android:id="@+id/tv_3_4"
                    style="@style/tv_offline_vip"
                    android:textColor="#339ef9" />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:background="@drawable/et_background9"
            android:gravity="center"
            android:layout_height="@dimen/distance_44">
            <LinearLayout
                style="@style/ll_offline_vip">
                <TextView
                    style="@style/tv_offline_vip"
                    android:text="4倍～5倍"
                    android:textColor="#339ef9" />
            </LinearLayout>
            <LinearLayout
                style="@style/ll_offline_vip">
                <TextView
                    android:id="@+id/tv_4_5"
                    style="@style/tv_offline_vip"
                    android:textColor="#339ef9" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
</LinearLayout>
</ScrollView>