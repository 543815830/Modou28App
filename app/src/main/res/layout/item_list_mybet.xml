<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="@dimen/distance_60">
        <LinearLayout
           style="@style/item_ll_game">
            <TextView
                android:id="@+id/tv_game_id"
                android:padding="@dimen/distance_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:background="@drawable/et_background19"
                android:textSize="@dimen/text_size_3"
                android:text="425055"/>
        </LinearLayout>
        <LinearLayout
           style="@style/item_ll_game">
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/ll_game_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_game_result"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#959595"
                    android:textSize="@dimen/text_size_3"
                    android:text="2+5+6="/>
                <TextView
                    android:id="@+id/tv_game_result_sum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:background="@drawable/et_background20"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/text_size_3"
                    android:text="15"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_game_result2"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_game_result2"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:background="@drawable/et_background20"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/text_size_3"
                    android:text="庄"/>
            </LinearLayout>
            <LinearLayout
            android:id="@+id/ll_game_result3"
            android:visibility="gone"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_1"
                android:layout_width="@dimen/distance_15"
                android:layout_height="@dimen/distance_15"
                android:src="@drawable/down_arrow"/>
            <ImageView
                android:id="@+id/iv_2"
                android:layout_width="@dimen/distance_15"
                android:layout_height="@dimen/distance_15"
                android:src="@drawable/down_arrow"/>
            <ImageView
                android:id="@+id/iv_3"
                android:layout_width="@dimen/distance_15"
                android:layout_height="@dimen/distance_15"
                android:src="@drawable/down_arrow"/>
        </LinearLayout>
            <LinearLayout
            android:id="@+id/ll_game_result4"
            android:visibility="gone"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_game_result4"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:background="@drawable/et_background20"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/text_size_1"
                    android:text="8"/>
                <TextView
                    android:id="@+id/tv_game_result41"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#339ef9"
                    android:textSize="@dimen/text_size_3"
                    android:text="大，双"/>
                <TextView
                    android:id="@+id/tv_game_result42"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#959595"
                    android:textSize="@dimen/text_size_1"
                    android:text="2+5+6="/>
        </LinearLayout>
            <LinearLayout
            android:id="@+id/ll_game_result5"
            android:visibility="gone"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_game_result5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#339ef9"
                    android:textSize="@dimen/text_size_3"
                    android:text="1，2,3,4,4,4"/>
        </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_game_result6"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_game_result6"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:background="@drawable/et_background20"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/text_size_3"
                    android:text="1"/>
                <TextView
                    android:id="@+id/tv_game_result61"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:background="@drawable/et_background20"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/text_size_3"
                    android:text="1"/>
                <TextView
                android:id="@+id/tv_game_result62"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:background="@drawable/et_background20"
                android:textColor="#ffffff"
                android:textSize="@dimen/text_size_3"
                android:text="1"/>
                <TextView
                android:id="@+id/tv_game_result63"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:background="@drawable/et_background20"
                android:textColor="#ffffff"
                android:textSize="@dimen/text_size_3"
                android:text="1"/>

                <TextView
                    android:id="@+id/tv_game_result64"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:background="@drawable/et_background20"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/text_size_3"
                    android:text="1"/>

            </LinearLayout>
        </LinearLayout>
  <LinearLayout
           style="@style/item_ll_game">
            <TextView
                android:id="@+id/bet_points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#959595"
                android:textSize="@dimen/text_size_3"
                android:text="1234567"/>
        </LinearLayout>
        <LinearLayout
            style="@style/item_ll_game">
            <TextView
                android:id="@+id/get_points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#959595"
                android:drawablePadding="@dimen/distance_3"
                android:drawableRight="@drawable/right"
                android:textSize="@dimen/text_size_3"
                android:text="1234567"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>