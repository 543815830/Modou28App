<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".usercenter.activiy.UpdatePasswordActivity">
    <include layout="@layout/title_bar"/>
    <RelativeLayout
        android:layout_marginTop="@dimen/distance_25"
       style="@style/update_pwd_ll">
            <TextView
                android:id="@+id/tv1"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
              android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_5"
                android:textColor="#454545"
                android:text="@string/_old_pwd" />
        <EditText

            android:id="@+id/old_pwd"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/tv1"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_5"
            android:textColor="#c3c3c3"
            android:hint="@string/_old_pwd_input"
            tools:ignore="TextFields" />
    </RelativeLayout>
    <RelativeLayout
        style="@style/update_pwd_ll">
        <TextView
            android:id="@+id/tv2"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_5"
            android:textColor="#454545"
            android:text="@string/_new_pwd" />
        <EditText
            android:id="@+id/new_pwd"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/tv2"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_5"
            android:textColor="#c3c3c3"
            android:hint="@string/_new_pwd_input"
            tools:ignore="TextFields" />
    </RelativeLayout>
    <RelativeLayout
        style="@style/update_pwd_ll">
        <TextView
            android:id="@+id/tv3"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_5"
            android:textColor="#454545"
            android:text="@string/_commit_pwd" />
        <EditText
            android:id="@+id/ag_new_pwd"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/tv3"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_5"
            android:textColor="#c3c3c3"
            android:hint="@string/_commit_pwd_input"
            tools:ignore="TextFields" />
    </RelativeLayout>
    <RelativeLayout
        style="@style/update_pwd_ll">
        <TextView
            android:id="@+id/tv_pwd_que"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_5"
            android:textColor="#454545"
            android:text="@string/_pwd_que" />
        <EditText
            android:id="@+id/et_pwd_ans"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/tv_pwd_que"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_5"
            android:textColor="#c3c3c3"
            android:hint="@string/pwd_answer_input"
            tools:ignore="TextFields" />
    </RelativeLayout>
    <RelativeLayout
        style="@style/update_pwd_ll">
        <TextView
            android:id="@+id/tv4"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_5"
            android:textColor="#454545"
            android:text="验证手机： " />
        <EditText
            android:id="@+id/versioncode"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/tv4"
            android:layout_toLeftOf="@+id/get_version_code"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_5"
            android:textColor="#c3c3c3"
            android:hint="@string/_versioncode_input"
            tools:ignore="TextFields" />
        <TextView

            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/distance_3"
            android:id="@+id/get_version_code"
            android:background="@drawable/login_btn_background"
            android:textSize="@dimen/text_size_1"
            android:gravity="center"
            android:textColor="@color/tv_fp_color"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/distance_30"
            android:text="@string/get_code"/>
    </RelativeLayout>
    <Button
        android:id="@+id/commit"
        android:layout_marginTop="@dimen/distance_25"
        android:layout_marginBottom="@dimen/distance_15"
        android:layout_marginLeft="@dimen/distance_25"
        android:layout_marginRight="@dimen/distance_25"
        android:background="@drawable/login_btn_background"
        android:textSize="@dimen/text_size_6"
        android:textColor="@color/tv_fp_color"
        android:layout_width="match_parent"
        android:layout_height="@dimen/distance_45"
        android:text="@string/string_commit"/>
<TextView
    android:id="@+id/forget_pwd"
    android:layout_gravity="center"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="@color/StatusFColor"
    android:textSize="@dimen/text_size_1"
    android:text="@string/_forget_pwd"/>

</LinearLayout>