<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_item_advance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/distance_13"
        android:layout_marginRight="@dimen/distance_13"
        android:layout_marginBottom="@dimen/distance_10"
        android:background="@drawable/et_background6">

        <LinearLayout
            android:id="@+id/ll_cb"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/distance_13"
            android:layout_marginRight="@dimen/distance_13"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center">
            <CheckBox
                android:id="@+id/cb_advance"
                android:layout_width="@dimen/distance_17"
                android:layout_height="@dimen/distance_17"
                android:background="@drawable/mailbox_selector"
                android:button="@null" />
        </LinearLayout>

        <LinearLayout
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/ll_cb"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="9"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="@dimen/distance_0"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_game_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/distance_13"
                        android:layout_marginTop="@dimen/distance_13"
                        android:text="急速28"
                        android:textColor="#454545"
                        android:textSize="@dimen/text_size_8" />
                    <TextView
                        android:id="@+id/tv_advance_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/distance_6"
                        android:text="以闯关数：6"
                        android:textColor="#454545"
                        android:textSize="@dimen/text_size_2" />
                    <TextView
                        android:id="@+id/tv_advance_ask"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="领取要求：无"
                        android:textColor="#454545"
                        android:layout_marginBottom="@dimen/distance_6"
                        android:textSize="@dimen/text_size_2" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/distance_0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="@dimen/distance_30"
                        android:layout_height="@dimen/distance_30"
                        android:src="@mipmap/coin_ic" />
                    <!--android:shadowDx="-5"
                    android:shadowDy="0"
                    android:shadowRadius="1"-->
                    <TextView
                        android:id="@+id/tv_coin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/distance_8"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:text="650"
                        android:textColor="#339ef9"
                        android:textSize="@dimen/text_size_5" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/distance_10">
                <LinearLayout
                    android:layout_width="@dimen/distance_0"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:textColor="#454545"
                        android:textSize="@dimen/text_size_2"
                        android:text="胜率还差："
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/tv_shenglv"
                        android:layout_width="wrap_content"
                        android:textColor="#339ef9"
                        android:textSize="@dimen/text_size_9"
                        android:text="89%"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="@dimen/distance_0"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:textColor="#454545"
                        android:textSize="@dimen/text_size_2"
                        android:text="盈利还差："
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/tv_yingli"
                        android:layout_width="wrap_content"
                        android:textColor="#339ef9"
                        android:textSize="@dimen/text_size_9"
                        android:text="89%"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="@dimen/distance_0"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:textColor="#454545"
                        android:textSize="@dimen/text_size_2"
                        android:text="期数还差："
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/tv_qishu"
                        android:layout_width="wrap_content"
                        android:textColor="#339ef9"
                        android:textSize="@dimen/text_size_9"
                        android:text="89%"
                        android:layout_height="wrap_content" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>