<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ruixin.administrator.ruixinapplication.gamecenter.activity.BetContentActivity">
    <include layout="@layout/title_bar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/ll_bet_content"
        android:background="#f3f3f3"
        android:orientation="vertical"
        android:layout_height="match_parent">
       <LinearLayout
           android:layout_width="match_parent"
           android:gravity="center"
           android:layout_marginTop="@dimen/distance_11"
           android:layout_marginBottom="@dimen/distance_12_5"
           android:orientation="horizontal"
           android:layout_height="wrap_content">
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textColor="@color/StatusFColor"
               android:textSize="@dimen/text_size_5"
               android:text="第"/>
           <TextView
               android:id="@+id/tv_bet_no"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textColor="#ff0000"
               android:textSize="@dimen/text_size_5"
               android:text="51246"/>
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textColor="@color/StatusFColor"
               android:textSize="@dimen/text_size_5"
               android:text="期"/>
       </LinearLayout>
        <ListView
            android:id="@+id/bet_content_lv"
            android:divider="#00000000"
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </ListView>

    </LinearLayout>

</LinearLayout>
