<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_alignParentLeft="true"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_get_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#242424"
                    android:layout_marginTop="@dimen/distance_15"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_size_3"
                    android:text="用户01"/>
                <TextView
                    android:id="@+id/tv_get_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/distance_10"
                    android:layout_marginBottom="@dimen/distance_14"
                    android:textColor="#b4b4b4"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_size_1"
                    android:text="12*-25-4"/>
            </LinearLayout>
            <TextView
                android:id="@+id/tv_get_cions"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ff0000"
                android:textStyle="bold"
                android:drawableRight="@mipmap/hongbao_icon"
                android:drawablePadding="@dimen/distance_10"
                android:textSize="@dimen/text_size_5"
                android:text="56"/>
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>