<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rl_conver"
    android:orientation="vertical"
    tools:context="com.ruixin.administrator.ruixinapplication.exchangemall.activity.ConversionActivity">

    <include
        android:id="@+id/title_bar"
        layout="@layout/title_bar"
        android:layout_alignParentTop="true"
        tools:ignore="IncludeLayoutParam" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_bar"
        android:layout_marginBottom="@dimen/distance_45">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_addres"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title_bar"
                android:layout_marginBottom="@dimen/distance_5"
                android:background="@drawable/location_shape"
                android:paddingBottom="@dimen/distance_10"
                android:paddingTop="@dimen/distance_10">

                <ImageView
                    android:id="@+id/iv_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/distance_13"
                    android:src="@drawable/location" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/distance_13"
                    android:layout_toRightOf="@+id/iv_location"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_cuser_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="用户昵称：贝贝"
                        android:textColor="#454545"
                        android:textSize="@dimen/text_size_5" />

                    <TextView
                        android:id="@+id/tv_cuser_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="手机号码：13256488528"
                        android:textColor="#454545"
                        android:textSize="@dimen/text_size_5" />

                    <TextView
                        android:id="@+id/tv_cuser_qq"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="QQ：124563"
                        android:textColor="#454545"
                        android:textSize="@dimen/text_size_5" />

                    <TextView
                        android:id="@+id/tv_cuser_mail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="邮箱：1234566"
                        android:textColor="#454545"
                        android:textSize="@dimen/text_size_5" />

                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/right" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_product"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/rl_addres"
                android:background="#ffffff"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/distance_30"
                    android:layout_marginLeft="@dimen/distance_13"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/distance_13"
                    android:layout_marginTop="@dimen/distance_45">

                    <ImageView
                        android:id="@+id/iv_prize"
                        android:layout_width="@dimen/distance_80"
                        android:layout_gravity="center_vertical"
                        android:scaleType="fitXY"
                        android:layout_height="@dimen/distance_80"
                        />

                    <LinearLayout
                        android:layout_width="@dimen/distance_0"
                        android:layout_marginLeft="@dimen/distance_8"
                        android:layout_gravity="center_vertical"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_cprize_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:lineSpacingExtra="@dimen/distance_5"
                            android:maxLines="2"
                            android:text="最近做项目过程中遇到上滑停靠的效果最近做项目过程中遇到上滑停靠的效果"
                            android:textColor="#323333"
                            android:textSize="@dimen/text_size_5" />

                        <!-- <TextView
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:layout_marginTop="@dimen/distance_5"
                             android:ellipsize="end"
                             android:lineSpacingExtra="@dimen/distance_5"
                             android:maxLines="2"
                             android:text="颜色分类：绿色插画"
                             android:textColor="#323333"
                             android:textSize="@dimen/text_size_4" />-->
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/distance_5"
                                        android:ellipsize="end"
                                        android:lineSpacingExtra="@dimen/distance_5"
                                        android:maxLines="2"
                                        android:text="金币："
                                        android:textColor="#323333"
                                        android:textSize="@dimen/text_size_4" />

                                    <TextView
                                        android:id="@+id/tv_cprize_price"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/distance_5"
                                        android:ellipsize="end"
                                        android:lineSpacingExtra="@dimen/distance_5"
                                        android:maxLines="2"
                                        android:text="123456"
                                        android:textColor="#339ef9"
                                        android:textSize="@dimen/text_size_4" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">
                                    <TextView
                                        android:id="@+id/tv_pop_up"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/distance_5"
                                        android:drawablePadding="@dimen/distance_6"
                                        android:ellipsize="end"
                                        android:lineSpacingExtra="@dimen/distance_5"
                                        android:maxLines="2"
                                        android:text="额外手续费："
                                        android:textColor="#323333"
                                        android:textSize="@dimen/text_size_4" />
                                    <TextView
                                        android:id="@+id/extra_fei"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/distance_5"
                                        android:drawablePadding="@dimen/distance_6"
                                        android:drawableRight="@drawable/wenhao"
                                        android:ellipsize="end"
                                        android:lineSpacingExtra="@dimen/distance_5"
                                        android:maxLines="2"
                                        android:text="1430"
                                        android:textColor="#339ef9"
                                        android:textSize="@dimen/text_size_4" />
                                </LinearLayout>



                            </LinearLayout>

                            <TextView
                                android:id="@+id/tv_sum"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:text="×1" />
                        </RelativeLayout>


                    </LinearLayout>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/distance_45"
                    android:background="@drawable/rl_user_shape">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/distance_13"
                        android:text="兑换数量"
                        android:textColor="#454545"
                        android:textSize="@dimen/text_size_5" />

                    <ImageView
                        android:id="@+id/iv_add"
                        android:layout_width="@dimen/distance_25"
                        android:layout_height="@dimen/distance_25"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/distance_13"
                        android:src="@drawable/add" />

                    <EditText
                        android:id="@+id/et_num"
                        android:layout_width="@dimen/distance_45"
                        android:gravity="center"
                        android:inputType="number"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/iv_add"
                        android:background="@null"
                        android:text="1"
                        android:textColor="#454545"
                        android:textSize="@dimen/text_size_4" />

                    <ImageView
                        android:id="@+id/iv_sub"
                        android:layout_width="@dimen/distance_25"
                        android:layout_height="@dimen/distance_25"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/et_num"
                        android:src="@drawable/sub" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/distance_45"
                    android:background="@drawable/rl_user_shape">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/distance_13"
                        android:text="配送方式"
                        android:textColor="#454545"
                        android:textSize="@dimen/text_size_5" />

                    <ImageView
                        android:id="@+id/iv_right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/distance_13"
                        android:src="@drawable/right" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/distance_8"
                        android:layout_toLeftOf="@+id/iv_right"
                        android:text="官方配送"
                        android:textColor="#454545"
                        android:textSize="@dimen/text_size_4" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/distance_45"
                    android:background="@drawable/rl_user_shape"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tv_beizhu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/distance_13"
                        android:gravity="center_vertical"
                        android:text="备注留言"
                        android:textColor="#454545"
                        android:textSize="@dimen/text_size_5" />

                    <EditText
                        android:id="@+id/et_beizhu"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/distance_40"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/distance_13"
                        android:layout_marginLeft="@dimen/distance_13"
                       android:layout_toRightOf="@+id/tv_beizhu"
                        android:background="@drawable/et_background12"
                        android:gravity="center"
                        android:hint="有什么想对商家说的，可以写在这里呦！"
                        android:textColor="#454545"
                        android:textSize="@dimen/text_size_4" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/distance_55"
                    android:background="@drawable/rl_user_shape"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tv_mibao"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/distance_13"
                        android:gravity="center_vertical"
                        android:text="密保问题"
                        android:textColor="#454545"
                        android:textSize="@dimen/text_size_5" />
                    <EditText
                        android:id="@+id/et_answer"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/distance_40"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/distance_13"
                        android:layout_marginLeft="@dimen/distance_13"
                        android:layout_toRightOf="@+id/tv_mibao"
                        android:background="@drawable/et_background12"
                        android:gravity="center"
                        android:hint="有什么想对商家说的，可以写在这里呦！"
                        android:textColor="#454545"
                        android:textSize="@dimen/text_size_4" />
                <!--    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/distance_13"
                        android:layout_marginLeft="@dimen/distance_13"
                       android:layout_toRightOf="@+id/tv_mibao"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_seques"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="您的密保问题？"
                            android:textColor="#454545"
                            android:textSize="@dimen/text_size_1" />

                        <EditText
                            android:id="@+id/et_answer"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/distance_25"
                            android:background="@drawable/et_background12"
                            android:gravity="center"
                            android:hint="请输入密保答案"
                            android:textColor="#454545"
                            android:textSize="@dimen/text_size_4" />
                    </LinearLayout>-->


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_version_code"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/distance_45"
                    android:background="@drawable/rl_user_shape">

                    <TextView
                        android:id="@+id/tv_phone_version"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/distance_13"
                        android:text="手机验证"
                        android:textColor="#454545"
                        android:textSize="@dimen/text_size_5" />

                    <EditText
                        android:id="@+id/et_version_code"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/distance_40"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/distance_5"
                        android:layout_marginLeft="@dimen/distance_13"
                        android:layout_toLeftOf="@+id/tv_get_code"
                        android:layout_toRightOf="@+id/tv_phone_version"
                        android:background="@drawable/et_background12" />

                    <TextView
                        android:id="@+id/tv_get_code"
                        android:padding="@dimen/distance_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                       android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/distance_13"
                        android:background="#339ef9"
                        android:text="获取验证码"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/text_size_5" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_cash_notice"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/distance_45"
                    android:background="@drawable/rl_user_shape">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/distance_13"
                        android:text="兑奖须知"
                        android:textColor="#454545"
                        android:textSize="@dimen/text_size_5" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/distance_13"
                        android:src="@drawable/right" />

                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/distance_45"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true">

        <LinearLayout
            android:layout_width="@dimen/distance_0"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="#f3f9ff"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="合计金币："
                android:textColor="#454545"
                android:textSize="@dimen/text_size_5" />

            <TextView
                android:id="@+id/true_coin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="123456"
                android:textColor="#339ef9"
                android:textSize="@dimen/text_size_5" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_conversion"
            android:layout_width="@dimen/distance_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#339ef9"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="确认兑换"
                android:textColor="#ffffff"
                android:textSize="@dimen/text_size_5" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
