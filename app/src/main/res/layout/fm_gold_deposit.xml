<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_fm_deposit"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#f2f2f2"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/distance_8"
        android:layout_marginBottom="@dimen/distance_8"
        android:layout_marginLeft="@dimen/distance_12"
        android:layout_marginRight="@dimen/distance_12"
        android:background="@drawable/et_background6"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="@dimen/distance_12_5"
            android:layout_marginLeft="@dimen/distance_10"
            android:textColor="#454545"
            android:textSize="@dimen/text_size_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提现金额"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rcy_coin_deposit"
            android:layout_marginTop="@dimen/distance_10"
            android:layout_marginBottom="@dimen/distance_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </android.support.v7.widget.RecyclerView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/distance_10"
            android:layout_marginRight="@dimen/distance_10"
            android:background="@drawable/stroke_bottom_d0"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/et_deposit_coins"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/distance_10"
                android:drawableLeft="@mipmap/tixian_rmb"
                android:textColor="#d0d0d0"
                android:background="@null"
                android:inputType="numberDecimal"
                android:layout_marginTop="@dimen/distance_15"
                android:layout_marginBottom="@dimen/distance_19"
                android:textSize="@dimen/text_size_20"
                android:hint="单位：元"/>

        </LinearLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/ll_shoufei"
        android:layout_marginTop="@dimen/distance_13"
        android:layout_marginBottom="@dimen/distance_14"
        android:layout_marginLeft="@dimen/distance_10"
        android:layout_width="wrap_content"
        android:layout_alignParentLeft="true"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#979797"
            android:textSize="@dimen/text_size_1"
            android:text="手续费："/>
        <TextView
            android:id="@+id/tv_shoufei"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ff0000"
            android:drawablePadding="@dimen/distance_7_5"
            android:drawableRight="@drawable/wenhao"
            android:textSize="@dimen/text_size_1"
            android:text="1000金币"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/distance_13"
        android:layout_marginBottom="@dimen/distance_14"
        android:layout_marginRight="@dimen/distance_10"
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#979797"
            android:textSize="@dimen/text_size_1"
            android:text="扣除金币："/>
        <TextView
            android:id="@+id/deduct_coin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ff0000"
            android:textSize="@dimen/text_size_1"
            android:text="1000金币"/>
    </LinearLayout>
</RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/et_background6"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/distance_12"
        android:layout_marginRight="@dimen/distance_12"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="@dimen/distance_12_5"
            android:layout_marginLeft="@dimen/distance_10"
            android:textColor="#454545"
            android:textSize="@dimen/text_size_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收款方式"/>
        <TextView
            android:layout_marginTop="@dimen/distance_7_5"
            android:layout_marginLeft="@dimen/distance_10"
            android:textColor="#ff0000"
            android:textSize="@dimen/text_size_11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5分钟快速审核，秒提秒到，提现审核时间1:00-24:00"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/distance_10"
            android:layout_marginRight="@dimen/distance_10"
            android:background="@drawable/stroke_bottom_d0"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/et_fech"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/down_arrow"
                android:textColor="#d0d0d0"
                android:background="@null"
                android:layout_marginTop="@dimen/distance_15"
                android:layout_marginBottom="@dimen/distance_9"
                android:textSize="@dimen/text_size_4"
                android:hint="请选择收款方式"/>

        </LinearLayout>
        <TextView
            android:id="@+id/tv_user_secques"
            android:layout_marginTop="@dimen/distance_12_5"
            android:layout_marginLeft="@dimen/distance_10"
            android:textColor="#454545"
            android:textSize="@dimen/text_size_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="密保问题：你的职业是什么？"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/distance_10"
            android:layout_marginRight="@dimen/distance_10"
            android:layout_marginBottom="@dimen/distance_9"
            android:background="@drawable/stroke_bottom_d0"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/et_tbusernick"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#d0d0d0"
                android:background="@null"
                android:layout_marginTop="@dimen/distance_15"
                android:layout_marginBottom="@dimen/distance_9"
                android:textSize="@dimen/text_size_4"
                android:hint="请输入密保问题答案"/>

        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/deposit"
        android:layout_marginTop="@dimen/distance_15"
        android:layout_marginBottom="@dimen/distance_15"
        android:layout_marginLeft="@dimen/distance_12"
        android:layout_marginRight="@dimen/distance_12"
        android:background="@drawable/login_btn_background"
        android:textSize="@dimen/text_size_6"
        android:textColor="@color/tv_fp_color"
        android:layout_width="match_parent"
        android:layout_height="@dimen/distance_45"
        android:text="申请提现"/>
    <TextView
        android:id="@+id/deposit_record"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/distance_15"
        android:layout_marginBottom="@dimen/distance_20"
        android:textColor="@color/cancel_login_color"
        android:text="提现记录" />
</LinearLayout>