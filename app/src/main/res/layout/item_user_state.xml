<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f2f2f2"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/distance_13"
        android:layout_marginRight="@dimen/distance_13"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/distance_5"
        android:background="@drawable/et_background4"
        android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#454545"
        android:layout_marginLeft="@dimen/distance_13"
        android:layout_marginTop="@dimen/distance_15"
        android:layout_marginBottom="@dimen/distance_15"
        android:textSize="@dimen/text_size_6"
        android:text="@string/login_awarze"
        android:layout_marginStart="@dimen/distance_13" />
    <TextView
        android:id="@+id/st_time"
        style="@style/user_state_item"
        android:text="@string/string_time"/>
    <TextView
        android:id="@+id/st_suffer"
        style="@style/user_state_item"
        android:text="@string/string_experise"/>
    <TextView
        android:id="@+id/st_coin"
       style="@style/user_state_item"
        android:text="@string/string_coins"/>
    <TextView
        android:id="@+id/st_balance"
        style="@style/user_state_item"
        android:text="@string/string_balance"/>
    </LinearLayout>
</RelativeLayout>