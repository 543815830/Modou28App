<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="@dimen/distance_60">
        <LinearLayout
           style="@style/item_ll_game">
            <TextView
                android:id="@+id/tv_game_noid"
                android:padding="@dimen/distance_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:background="@drawable/et_background19"
                android:textSize="@dimen/text_size_1"
                android:text="425055"/>
        </LinearLayout>
        <LinearLayout
           style="@style/item_ll_game">
            <TextView
                android:id="@+id/tv_end_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#959595"
                android:textSize="@dimen/text_size_1"
                android:text="10:14"/>
        </LinearLayout>
        <LinearLayout
           style="@style/item_ll_game">
            <LinearLayout
                android:id="@+id/ll_game_open"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_game_open"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#959595"
                    android:textSize="@dimen/text_size_1"
                    android:text="2+5+6="/>
                <TextView
                    android:id="@+id/tv_open_sum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/et_background20"
                    android:textColor="#ffffff"
                    android:gravity="center"
                    android:textSize="@dimen/text_size_1"
                    android:text="15"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_game_open2"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_game_open2"
                    style="@style/result_tv1"
                    android:text="庄" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_game_open3"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_game_open3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/StatusFColor"
                    android:textSize="@dimen/text_size_1"
                    android:text="1,2,2,2,2,2,2,2,2,22,,2" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_game_open4"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_game_open4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/et_background20"
                    android:textColor="#ffffff"
                    android:gravity="center"
                    android:textSize="@dimen/text_size_1"
                    android:text="15"/>
                <TextView
                    android:id="@+id/tv_game_open41"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="#339ef9"
                    android:textSize="@dimen/text_size_1"
                    android:text="大，双"/>
                <TextView
                    android:id="@+id/tv_game_open42"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="#959595"
                    android:textSize="@dimen/text_size_1"
                    android:text="2+5+6="/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_game_open5"
                android:visibility="gone"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tv_game_open5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#959595"
                    android:textSize="@dimen/text_size_1"
                    android:text="未开奖"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_game_open6"
                android:visibility="gone"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/iv_1"
                    android:layout_width="@dimen/distance_15"
                    android:layout_height="@dimen/distance_15"
                    android:src="@drawable/down_arrow"/>
                <ImageView
                    android:id="@+id/iv_2"
                    android:layout_width="@dimen/distance_15"
                    android:layout_height="@dimen/distance_15"
                    android:src="@drawable/down_arrow"/>
                <ImageView
                    android:id="@+id/iv_3"
                    android:layout_width="@dimen/distance_15"
                    android:layout_height="@dimen/distance_15"
                    android:src="@drawable/down_arrow"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_game_open7"
                android:visibility="gone"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tv_game_open7"
                    style="@style/result_tv7"
                    android:text="庄" />
                <TextView
                    android:id="@+id/tv_game_open71"
                    style="@style/result_tv7"
                    android:text="庄" />
                <TextView
                    android:id="@+id/tv_game_open72"
                    style="@style/result_tv7"
                    android:text="庄" />
                <TextView
                    android:id="@+id/tv_game_open73"
                    style="@style/result_tv7"
                    android:text="庄" />
                <TextView
                    android:id="@+id/tv_game_open74"
                    style="@style/result_tv7"
                    android:text="庄" />
            </LinearLayout>
        </LinearLayout>
  <LinearLayout
           style="@style/item_ll_game"
         android:orientation="vertical">
            <TextView
                android:id="@+id/bet_points_open"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#959595"
                android:textSize="@dimen/text_size_1"
                android:text="1234567"/>
      <TextView
          android:id="@+id/tv_get_points_open"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffcb73"
          android:textSize="@dimen/text_size_1"
                android:text="1234567"/>
        </LinearLayout>
        <LinearLayout
            style="@style/item_ll_game">
            <Button
                android:id="@+id/btn_bet"
                android:layout_width="@dimen/distance_50"
                android:layout_height="@dimen/distance_25"
                android:background="@drawable/button_selector3"
                android:padding="@dimen/distance_0"
                android:text="投注"
                android:textColor="#ffffff"
                android:textSize="@dimen/text_size_1" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>