<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f5f5f5">
        <TextView
            android:textSize="@dimen/text_size_3"
            android:layout_marginLeft="@dimen/distance_12_5"
            android:textColor="#959595"
            android:text="A"
            android:id="@+id/show_letter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/distance_3"
            android:layout_marginBottom="@dimen/distance_3"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/distance_40"
        android:layout_marginLeft="@dimen/distance_12_5"
        android:layout_marginRight="@dimen/distance_50"
        android:background="@drawable/et_background10"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/tv_game_name"
            android:textSize="@dimen/text_size_3"
            android:layout_marginLeft="@dimen/distance_12_5"
            android:textColor="#454545"
            android:text="急速28"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>