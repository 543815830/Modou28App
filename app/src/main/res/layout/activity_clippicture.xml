<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_marginTop="@dimen/distance_20"
        android:layout_width="match_parent"
        android:layout_height="@dimen/distance_48">
        <RelativeLayout
            android:layout_width="match_parent"
            android:background="#000000"
            android:layout_height="@dimen/distance_48">
            <LinearLayout
                android:id="@+id/back_layout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/distance_12"
                android:paddingRight="@dimen/distance_12"
                tools:ignore="RtlHardcoded">
                <ImageView
                    android:id="@+id/back_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/distance_18"
                    android:layout_gravity="center"
                    android:src="@drawable/arrow" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/save_layout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/distance_12"
                android:gravity="right|center_vertical"
                android:orientation="horizontal"
                tools:ignore="RelativeOverlap,RtlHardcoded">

                <Button
                    android:id="@+id/save_btn"
                    android:layout_width="@dimen/distance_50"
                    android:layout_height="@dimen/distance_25"
                    android:layout_gravity="center"
                    android:background="@drawable/et_background35"
                    android:text="使用"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/text_size_3" />
            </LinearLayout>

            <TextView
                android:id="@+id/title_txt"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:ellipsize="end"
                android:gravity="center"
                android:text="@string/string_auto_clipe"
                android:textColor="#666666"
                android:textSize="@dimen/text_size_6" />

        </RelativeLayout>
    </LinearLayout>


    <FrameLayout
        android:id="@+id/src_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/src_pic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#000000"
            android:scaleType="matrix"
            tools:ignore="ContentDescription" />
    </FrameLayout>


</LinearLayout>