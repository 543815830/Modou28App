<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".usercenter.activiy.InsideBankActivity">
    <include layout="@layout/title_bar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/distance_117"
        android:orientation="horizontal"
        android:background="@color/StatusFColor"
        tools:ignore="DisableBaselineAlignment">
        <LinearLayout
            android:layout_width="@dimen/distance_0"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_height="@dimen/distance_117">
            <TextView
                android:id="@+id/inside_user_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/distance_10"
                android:textSize="@dimen/text_size_30"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="#ffffff" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_5"
                android:textColor="#ffffff"
                android:text="@string/string_your_balance"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="@dimen/distance_0"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_height="@dimen/distance_117">
            <TextView
                android:id="@+id/inside_bank_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/distance_10"
                android:textSize="@dimen/text_size_30"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="#ffffff" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_5"
                android:textColor="#ffffff"
                android:text="@string/string_your_deposit"/>

        </LinearLayout>

    </LinearLayout>
    <android.support.design.widget.TabLayout
        android:id="@+id/tayLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/distance_45"
        app:tabIndicatorColor="#339ef9"
        app:tabIndicatorHeight="@dimen/distance_1"
        app:tabSelectedTextColor="#339ef9"
        app:tabTextAppearance="@style/TabLayoutTextStyle1"
        app:tabTextColor="#454545"/>
    <view
        android:id="@+id/inside_bank_vp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/distance_0"
        android:layout_weight="1"
        android:background="#f2f2f2"
        class="android.support.v4.view.ViewPager" />

</LinearLayout>
