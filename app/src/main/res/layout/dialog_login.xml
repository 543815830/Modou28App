<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/distance_25"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/StatusFColor"
            android:textSize="@dimen/text_size_8"
            android:text="@string/_version_pwd_card"/>
        <LinearLayout
            android:orientation="horizontal"
            android:background="@drawable/et_background14"
            android:layout_margin="@dimen/distance_25"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:padding="@dimen/distance_15"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@drawable/et_background7">
                <TextView
                    android:id="@+id/card_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_5"
                    android:textColor="#ffffff"
                    android:text="@string/a2"/>
            </LinearLayout>
            <EditText
                android:id="@+id/card_account"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:textSize="@dimen/text_size_5"
                android:textColor="#c3c3c3"
                android:hint="@string/_pwd_card_input"
                tools:ignore="TextFields" />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/distance_15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/cancel"
            android:layout_weight="1"
            android:text="@string/_cancel"
            android:background="@drawable/button_selector2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="ButtonStyle" />
        <Button
            android:id="@+id/commit"
            android:layout_weight="1"
            android:text="@string/string_save"
            android:background="@drawable/button_selector2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="ButtonStyle" />
    </LinearLayout>
</LinearLayout>