<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_check_number"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <include layout="@layout/title_bar" />

    <include layout="@layout/count_down_bar" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/center_bar" />
            <FrameLayout
                android:id="@+id/fl_game_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:background="#ffffff"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:background="@drawable/et_background30"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_height="@dimen/distance_30">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#959595"
                            android:textSize="@dimen/text_size_3"
                            android:layout_marginLeft="@dimen/distance_12_5"
                            android:text="对号投注管理"/>
                        <TextView
                            android:id="@+id/tv_warning"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/holo_red_light"
                            android:textSize="@dimen/text_size_1"
                            android:singleLine="true"
                            android:ellipsize="marquee"
                            android:layout_marginLeft="@dimen/distance_3"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:marqueeRepeatLimit="marquee_forever"
                            android:text="注意：确认并开始自动投注后，系统将会在你指定的期数内帮您自动投注，不论你的离线或在线都会持续运行直到期数终止或您关闭为止。" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:background="#f2f2f2"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                    <!--    <LinearLayout
                            android:layout_width="match_parent"
                            android:background="@drawable/et_background30"
                            android:layout_height="wrap_content">
                            <android.support.design.widget.TabLayout
                                android:id="@+id/tayLayout"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/distance_40"
                                app:tabIndicatorColor="#339ef9"
                                app:tabIndicatorHeight="@dimen/distance_1"
                                app:tabSelectedTextColor="#339ef9"
                                app:tabTextAppearance="@style/TabLayoutTextStyle1"
                                app:tabTextColor="#bbbbbb"/>
                        </LinearLayout>-->

                        <RadioGroup
                            android:id="@+id/rg_check"
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:layout_height="@dimen/distance_40">
                            <RadioButton
                                android:id="@+id/rb_add_scheme"
                                android:layout_width="@dimen/distance_0"
                                android:gravity="center"
                                android:layout_weight="1"
                                android:background="@drawable/tab_rb_selector4"
                                android:button="@null"
                                android:textColor="@drawable/auto_textcolor_selector"
                                android:layout_height="match_parent"
                                android:text="添加新方案"/>
                            <View
                                android:layout_width="@dimen/distance_1"
                                android:background="#dbdbdb"
                                android:layout_height="@dimen/distance_30"/>
                            <RadioButton
                                android:id="@+id/rb_update_scheme"
                                android:layout_width="@dimen/distance_0"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:background="@drawable/tab_rb_selector4"
                                android:button="@null"
                                android:textColor="@drawable/auto_textcolor_selector"
                                android:layout_height="match_parent"
                                android:text="修改现有方案"/>
                        </RadioGroup>
                        <LinearLayout
                            android:id="@+id/ll_choose_scheme"
                            android:layout_width="match_parent"
                            android:visibility="gone"
                            android:background="#ffffff"
                            android:layout_marginTop="@dimen/distance_15"
                            android:layout_height="@dimen/distance_45">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:textSize="@dimen/text_size_5"
                                android:layout_marginLeft="@dimen/distance_25"
                                android:layout_marginRight="@dimen/distance_15"
                                android:textStyle="bold"
                                android:gravity="center_vertical"
                                android:textColor="@color/StatusFColor"
                                android:drawableRight="@mipmap/down_jiantou"
                                android:text="选择方案"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_marginTop="@dimen/distance_15"
                            android:layout_marginBottom="@dimen/distance_15"
                            android:layout_marginLeft="@dimen/distance_25"
                            android:layout_marginRight="@dimen/distance_25"
                            android:orientation="vertical"
                            android:background="@drawable/et_background5"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="horizontal"
                                android:background="@drawable/et_background29"
                                android:gravity="center_vertical"
                                android:layout_height="@dimen/distance_45">
                                <TextView
                                    style="@style/check_number_tv1"
                                    android:text="方案名称"/>
                                <EditText
                                    android:id="@+id/et_trustee_name"
                                    style="@style/check_number_et1"
                                    android:hint="请输入方案名称"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="horizontal"
                                android:background="@drawable/et_background29"
                                android:gravity="center_vertical"
                                android:layout_height="@dimen/distance_45">
                                <TextView
                                    style="@style/check_number_tv1"
                                    android:text="开始期数"/>
                                <EditText
                                    android:id="@+id/et_start_no"
                                    style="@style/check_number_et1"
                                    android:text="12345"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="horizontal"
                                android:background="@drawable/et_background29"
                                android:gravity="center_vertical"
                                android:layout_height="@dimen/distance_45">
                                <TextView
                                    style="@style/check_number_tv1"
                                    android:text="结束期数"/>
                                <EditText
                                    android:id="@+id/et_end_no"
                                    style="@style/check_number_et1"
                                    android:text="12345"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="horizontal"
                                android:background="@drawable/et_background29"
                                android:gravity="center_vertical"
                                android:layout_height="@dimen/distance_45">
                                <TextView
                                    android:id="@+id/tv_up"
                                    style="@style/check_number_tv1"
                                    android:text="金币上限"/>
                                <EditText
                                    android:id="@+id/et_coins_up"
                                    style="@style/check_number_et1"
                                    android:hint="0表示不限制"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:layout_height="@dimen/distance_45">
                                <TextView
                                    android:id="@+id/tv_down"
                                    style="@style/check_number_tv1"
                                    android:text="金币下限"/>
                                <EditText
                                    android:id="@+id/et_coins_down"
                                    style="@style/check_number_et1"
                                    android:hint="0表示不限制"/>
                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:background="@drawable/et_background30"
                        android:layout_height="@dimen/distance_15">
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:background="#f2f2f2"
                        android:layout_height="@dimen/distance_30">
                        <LinearLayout
                            android:layout_width="@dimen/distance_0"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_height="match_parent">
                            <TextView
                                style="@style/check_number_tv2"
                                android:text="号码"/>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="@dimen/distance_0"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_height="match_parent">
                            <TextView
                                style="@style/check_number_tv2"
                                android:text="模式"/>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="@dimen/distance_0"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_height="match_parent">
                            <TextView
                                style="@style/check_number_tv2"
                                android:text="启用"/>

                        </LinearLayout>
                    </LinearLayout>
                    <ListView
                        android:id="@+id/check_number_lv"
                        android:layout_width="match_parent"
                        android:layout_marginBottom="@dimen/distance_50"
                        android:layout_height="wrap_content">

                    </ListView>
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:background="@drawable/et_background33"
        android:layout_height="@dimen/distance_50">
        <LinearLayout
            android:layout_width="@dimen/distance_0"
            android:layout_weight="1"
            android:background="#f2f2f2"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_clear"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableTop="@mipmap/del"
                android:textSize="@dimen/text_size_8"
                android:gravity="center"
                android:textColor="#959595"
                android:text="清空"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="@dimen/distance_0"
            android:layout_weight="1"
            android:background="@color/StatusFColor"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_bet"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="match_parent"
                android:textSize="@dimen/text_size_19"
                android:textColor="#ffffff"
                android:text="开始托管"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>