<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f2f2f2"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/distance_15"
        android:layout_marginTop="@dimen/distance_30"
        android:text="请输入金额"
        android:textColor="#454545"
        android:textSize="@dimen/text_size_5" />
<EditText
    android:id="@+id/et_points"
    android:layout_width="match_parent"
    android:paddingLeft="@dimen/distance_10"
    android:layout_marginLeft="@dimen/distance_25"
    android:layout_marginRight="@dimen/distance_25"
    android:background="@drawable/et_background21"
    android:layout_height="@dimen/distance_40" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/distance_15"
        android:layout_marginTop="@dimen/distance_15"
        android:text="快速选择"
        android:textColor="#959595"
        android:textSize="@dimen/text_size_3" />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/distance_25"
        android:layout_marginRight="@dimen/distance_25"
        android:layout_marginBottom="@dimen/distance_15"
        android:layout_height="@dimen/distance_40">
        <TextView
            android:id="@+id/tv1"
            android:layout_width="@dimen/distance_0"
            android:layout_weight="1"
            android:layout_marginRight="@dimen/distance_10"
            android:layout_height="match_parent"
            android:background="@drawable/et_background5"
            android:text="10K"
            android:gravity="center"
            android:textColor="#959595"
            android:textSize="@dimen/text_size_3" />
        <TextView
            android:id="@+id/tv2"
            android:layout_width="@dimen/distance_0"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent"
            android:background="@drawable/et_background5"
            android:text="100K"
            android:textColor="#959595"
            android:textSize="@dimen/text_size_3" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/distance_25"
        android:layout_marginRight="@dimen/distance_25"
        android:layout_marginBottom="@dimen/distance_15"
        android:layout_height="@dimen/distance_40">
        <TextView
            android:id="@+id/tv3"
            android:layout_width="@dimen/distance_0"
            android:layout_weight="1"
            android:layout_marginRight="@dimen/distance_10"
            android:layout_height="match_parent"
            android:background="@drawable/et_background5"
            android:text="500K"
            android:gravity="center"
            android:textColor="#959595"
            android:textSize="@dimen/text_size_3" />
        <TextView
            android:id="@+id/tv4"
            android:layout_width="@dimen/distance_0"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent"
            android:background="@drawable/et_background5"
            android:text="1000K"
            android:textColor="#959595"
            android:textSize="@dimen/text_size_3" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/distance_25"
        android:layout_marginRight="@dimen/distance_25"
        android:layout_marginBottom="@dimen/distance_15"
        android:layout_height="@dimen/distance_40">
        <TextView
            android:id="@+id/tv5"
            android:layout_width="@dimen/distance_0"
            android:layout_weight="1"
            android:layout_marginRight="@dimen/distance_10"
            android:layout_height="match_parent"
            android:background="@drawable/et_background5"
            android:text="5000K"
            android:gravity="center"
            android:textColor="#959595"
            android:textSize="@dimen/text_size_3" />
        <TextView
            android:id="@+id/tv6"
            android:layout_width="@dimen/distance_0"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent"
            android:background="@drawable/et_background5"
            android:text="1000"
            android:textColor="#959595"
            android:textSize="@dimen/text_size_3" />
    </LinearLayout>
    <Button
        android:id="@+id/commit"
        android:layout_marginTop="@dimen/distance_15"
        android:layout_marginBottom="@dimen/distance_15"
        android:layout_marginLeft="@dimen/distance_25"
        android:layout_marginRight="@dimen/distance_25"
        android:background="@drawable/login_btn_background"
        android:textSize="@dimen/text_size_6"
        android:textColor="@color/tv_fp_color"
        android:layout_width="match_parent"
        android:layout_height="@dimen/distance_40"
        android:text="@string/string_commit"/>

</LinearLayout>