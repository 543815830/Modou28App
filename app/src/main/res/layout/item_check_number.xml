<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="@dimen/distance_45">
        <LinearLayout
            android:layout_width="@dimen/distance_0"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_bet_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/et_background26"
                android:textColor="#ffffff"
                android:gravity="center"
                android:textSize="@dimen/text_size_19"
                android:text="2"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="@dimen/distance_0"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_my_mode"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="#454545"
                android:gravity="center"
                android:drawableRight="@drawable/down_arrow"
                android:drawablePadding="@dimen/distance_3"
                android:textSize="@dimen/text_size_5"
                android:text="我的模式"/>
            <TextView
                android:id="@+id/tv_mode_id"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="@dimen/distance_0"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent">
          <CheckBox
               android:id="@+id/cb_mode"
                android:layout_width="@dimen/distance_25"
                android:layout_height="@dimen/distance_25"
                android:button="@null"
                android:background="@drawable/check_number_selector"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>