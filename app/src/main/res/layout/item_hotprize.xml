<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f3f2f1"
    android:layout_marginLeft="@dimen/distance_13"
    android:layout_marginRight="@dimen/distance_13"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/distance_10"
        android:layout_marginBottom="@dimen/distance_15"
        android:layout_marginLeft="@dimen/distance_13"
        android:layout_marginRight="@dimen/distance_13"
        android:background="#ffffff"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/ic_hot_prize"
            android:layout_marginTop="@dimen/distance_5"
            android:layout_width="match_parent"
            android:layout_height="@dimen/distance_100"
            tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/title_hot_prize"
                android:layout_marginLeft="@dimen/distance_13"
                android:layout_marginTop="@dimen/distance_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#454545"
                android:maxLines="2"
                android:minLines="2"
                android:ellipsize="end"
                android:textSize="@dimen/text_size_3"
                tools:ignore="RtlHardcoded" />
            <TextView
                android:id="@+id/price_hot_prize"
                android:layout_marginLeft="@dimen/distance_13"
                android:layout_marginTop="@dimen/distance_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#339ef9"
                android:textSize="@dimen/text_size_3"
                tools:ignore="RtlHardcoded" />
        <Button
            android:id="@+id/conversion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/distance_5"
            android:paddingBottom="@dimen/distance_5"
            android:minHeight="@dimen/distance_0"
            android:layout_marginTop="@dimen/distance_3"
            android:background="@color/StatusFColor"
            android:textSize="@dimen/text_size_5"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/tv_fp_color"
            android:text="立即兑换"
            />
    </LinearLayout>



</RelativeLayout>