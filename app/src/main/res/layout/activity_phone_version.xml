<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".usercenter.activiy.ForgetPasswordActivity">
    <include layout="@layout/title_bar"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#454545"
        android:textSize="@dimen/text_size_3"
        android:layout_marginLeft="@dimen/distance_25"
        android:layout_marginTop="@dimen/distance_35"
        android:text="验证手机号，账号更安全～"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/distance_25"
        android:layout_marginRight="@dimen/distance_25"
        android:layout_marginTop="@dimen/distance_10"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/et_background">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/distance_17_5"
                android:src="@mipmap/phone" />

            <EditText
                android:id="@+id/phone_number"
                android:layout_width="match_parent"
                android:layout_height="@dimen/distance_45"
                android:layout_marginLeft="@dimen/distance_29"
                android:background="@null"
                android:hint="请输入手机号"
                android:textColor="#454545"
                android:textSize="@dimen/text_size_5"
                tools:ignore="RtlHardcoded,TextFields" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/et_background2"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/distance_15"
                android:layout_marginStart="@dimen/distance_15"
                android:src="@mipmap/version" />

            <EditText
                android:id="@+id/verification_code"
                android:layout_width="match_parent"
                android:layout_height="@dimen/distance_45"
                android:layout_marginLeft="@dimen/distance_26"
                android:layout_marginRight="@dimen/distance_1"
                android:layout_toLeftOf="@+id/get_code"
                android:layout_toRightOf="@+id/iv_version"
                android:background="@null"
                android:hint="@string/verification_code"
                android:textColor="#c3c3c3"
                android:textSize="@dimen/text_size_5"
                tools:ignore="RtlHardcoded,TextFields" />

            <TextView
                android:id="@+id/get_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="@dimen/distance_20"
                android:text="@string/get_code"
                android:textColor="@color/StatusFColor"
                android:textSize="@dimen/text_size_5"
                tools:ignore="RelativeOverlap,RtlHardcoded" />
        </RelativeLayout>

    </LinearLayout>
    <Button
        android:id="@+id/commit"
        android:layout_marginTop="@dimen/distance_25"
        android:layout_marginBottom="@dimen/distance_25"
        android:layout_marginLeft="@dimen/distance_25"
        android:layout_marginRight="@dimen/distance_25"
        android:background="@drawable/login_btn_background"
        android:textSize="@dimen/text_size_6"
        android:textColor="@color/tv_fp_color"
        android:layout_width="match_parent"
        android:layout_height="@dimen/distance_45"
        android:text="提交"/>

</LinearLayout>
