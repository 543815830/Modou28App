<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/distance_120"
        android:layout_marginLeft="@dimen/distance_13"
        android:layout_marginRight="@dimen/distance_13"
        android:layout_marginTop="@dimen/distance_10"
        android:layout_marginBottom="@dimen/distance_15"
        android:background="#ffffff"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/ic_ade"
            android:background="@drawable/ade_ic_background"
            android:layout_width="match_parent"
            android:layout_height="@dimen/distance_82_5"
            android:src="@drawable/ade_game1"
            tools:ignore="ContentDescription" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/distance_10"
            >
            <TextView
                android:id="@+id/title_ade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#454545"
                android:layout_centerInParent="true"
                android:layout_alignParentLeft="true"
                android:textSize="@dimen/text_size_3"
                tools:ignore="RtlHardcoded" />
            <TextView
                android:id="@+id/ade_website"
                android:layout_centerInParent="true"
                android:layout_toLeftOf="@id/ade_v"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#959595"
                android:textSize="@dimen/text_size_1"
                android:text="@string/_website"
                tools:ignore="RelativeOverlap,RtlHardcoded" />
            <View
                android:id="@+id/ade_v"
                android:visibility="gone"
                android:layout_toLeftOf="@id/ade_gift_bag"
                android:background="#959595"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/distance_5"
                android:layout_marginRight="@dimen/distance_5"
                android:layout_width="@dimen/distance_1"
                android:layout_height="@dimen/distance_12"
                tools:ignore="RtlHardcoded" />
            <TextView
                android:id="@+id/ade_gift_bag"
                android:layout_centerInParent="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#959595"
                android:textSize="@dimen/text_size_1"
                android:text="@string/_gift_bag"
                tools:ignore="RtlHardcoded" />
        </RelativeLayout>
    </LinearLayout>



</RelativeLayout>