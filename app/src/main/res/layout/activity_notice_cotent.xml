<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    android:orientation="vertical"
    tools:context=".usercenter.activiy.SmsContentActivity">
    <include layout="@layout/title_bar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/ll_sms_content"
        android:orientation="vertical">

<LinearLayout
    android:layout_width="match_parent"
   android:paddingTop="@dimen/distance_15"
    android:background="#ffffff"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_notice_title"
        android:layout_width="wrap_content"
        android:textColor="#000000"
        android:layout_marginLeft="@dimen/distance_25"
        android:layout_height="wrap_content"
        android:text="标题1"
        android:textSize="@dimen/text_size_19"/>

</LinearLayout>
        <RelativeLayout
            android:layout_marginBottom="@dimen/distance_5"
            android:padding="@dimen/distance_25"
            android:background="#ffffff"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/send_user"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:textSize="@dimen/text_size_3"
                android:textColor="#339ef9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="RelativeOverlap,RtlHardcoded,SpUsage" />
            <TextView
                android:id="@+id/send_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textSize="@dimen/text_size_3"
                android:textColor="#339ef9"
                tools:ignore="RelativeOverlap,RtlHardcoded" />

        </RelativeLayout>
        <LinearLayout
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:padding="@dimen/distance_25"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/sms_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#454545"
                android:lineSpacingExtra="@dimen/distance_10"
                android:textSize="@dimen/text_size_3" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

