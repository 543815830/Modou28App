<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#ffffff"
    android:id="@+id/ll_pop"
    android:gravity="center">
    <Button
        android:id="@+id/btn_alter_pic_camera"
        android:layout_marginTop="@dimen/distance_25"
        android:layout_marginLeft="@dimen/distance_25"
        android:layout_marginRight="@dimen/distance_25"
        android:background="@drawable/photo_btn_background"
        android:textSize="@dimen/text_size_6"
        android:textColor="#454545"
        android:layout_width="match_parent"
        android:layout_height="@dimen/distance_45"
        android:text="@string/string_take_photo"/>
    <Button
        android:id="@+id/btn_alter_pic_photo"
        android:layout_marginTop="@dimen/distance_25"
        android:layout_marginLeft="@dimen/distance_25"
        android:layout_marginRight="@dimen/distance_25"
        android:textSize="@dimen/text_size_6"
        android:background="@drawable/photo_btn_background"
        android:textColor="#454545"
        android:layout_width="match_parent"
        android:layout_height="@dimen/distance_45"
        android:text="@string/string_choose_photo"/>
    <Button
        android:id="@+id/btn_alter_exit"
        android:layout_marginTop="@dimen/distance_25"
        android:layout_marginBottom="@dimen/distance_25"
        android:layout_marginLeft="@dimen/distance_25"
        android:layout_marginRight="@dimen/distance_25"
        android:background="@drawable/login_btn_background"
        android:textSize="@dimen/text_size_6"
        android:textColor="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="@dimen/distance_45"
        android:text="@string/_cancel"/>
</LinearLayout>