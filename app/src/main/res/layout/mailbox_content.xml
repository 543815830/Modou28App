<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
    android:id="@+id/mLlContent"
        android:layout_width="match_parent"
        android:background="@drawable/et_background6"
        android:orientation="vertical"
        android:layout_height="match_parent"
        tools:ignore="UselessParent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/distance_20"
            android:paddingRight="@dimen/distance_20"
            android:layout_marginTop="@dimen/distance_17"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/unread"
                android:visibility="gone"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/distance_5"
                android:layout_width="@dimen/distance_6"
                android:layout_height="@dimen/distance_6"
                android:background="@drawable/et_background17"
                android:textSize="@dimen/text_size_2"
                android:gravity="center"
                android:textColor="#ffffff"
                tools:ignore="RtlHardcoded,SmallSp" />
            <TextView
                android:layout_toRightOf="@+id/unread"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/distance_5"
                android:layout_toLeftOf="@+id/tv_mail_time"
                android:id="@+id/tv_addresser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_5"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_centerVertical="true"
                android:textColor="#454545"
                tools:ignore="RtlHardcoded" />
            <TextView
                android:id="@+id/tv_mail_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textSize="@dimen/text_size_5"
                android:lineSpacingExtra="@dimen/distance_9"
                android:layout_centerVertical="true"
                android:textColor="#959595"
                tools:ignore="RelativeOverlap,RtlHardcoded" />

        </RelativeLayout>
        <TextView
            android:id="@+id/tv_mail_content"
            android:layout_marginTop="@dimen/distance_15"
            android:layout_marginLeft="@dimen/distance_20"
            android:layout_marginRight="@dimen/distance_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_1"
            android:maxLines="2"
            android:ellipsize="end"
            android:textColor="#959595" />
    </LinearLayout>
</LinearLayout>
