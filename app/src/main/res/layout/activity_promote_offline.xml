<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".usercenter.activiy.PromoteOfflineActivity">
    <include layout="@layout/title_bar"/>
    <android.support.design.widget.TabLayout
        android:id="@+id/tayLayout"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="@dimen/distance_45"
        app:tabIndicatorColor="#339ef9"
        app:tabIndicatorHeight="@dimen/distance_1"
        app:tabSelectedTextColor="#339ef9"
        app:tabTextAppearance="@style/TabLayoutTextStyle1"
        app:tabTextColor="#454545"/>
    <view
        android:id="@+id/offline_vp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/distance_0"
        android:layout_weight="1"
        android:background="#f2f2f2"
        class="android.support.v4.view.ViewPager" />

</LinearLayout>
