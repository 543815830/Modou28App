<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:id="@+id/ll_bagdetail"
    android:layout_height="match_parent"
    tools:context="com.ruixin.administrator.ruixinapplication.usercenter.activiy.RedbagDetailActivity">
    <include layout="@layout/title_bar"/>
<ScrollView
    android:id="@+id/mscroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >
    <LinearLayout
        android:layout_width="match_parent"

        android:orientation="vertical"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:background="#f2f9ff"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginRight="@dimen/distance_12"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_share_redbag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/distance_12_5"
                    android:layout_marginBottom="@dimen/distance_12_5"
                    android:layout_alignParentRight="true"
                    android:text="分享"
                    android:drawableLeft="@mipmap/share2"
                    android:drawablePadding="@dimen/distance_3"
                    android:textColor="#252525"
                    android:textSize="@dimen/text_size_11" />
                <TextView
                    android:id="@+id/tv_back"
                    android:layout_below="@+id/tv_share_redbag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="返还"
                    android:drawablePadding="@dimen/distance_3"
                    android:drawableLeft="@mipmap/back"
                    android:textColor="#252525"
                    android:textSize="@dimen/text_size_11" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/distance_25"
                        android:layout_gravity="center_horizontal"
                        android:src="@mipmap/hongbao"
                        android:layout_marginBottom="@dimen/distance_12_5"/>
                    <TextView
                        android:id="@+id/tv_coins_total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#ff0000"
                        android:layout_gravity="center_horizontal"
                        android:text="100/600"
                        android:drawablePadding="@dimen/distance_9"
                        android:drawableRight="@mipmap/hongbao_icon"
                        android:textSize="@dimen/text_size_4"/>
                    <TextView
                        android:id="@+id/tv_red_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#838383"
                        android:layout_marginTop="@dimen/distance_8"
                        android:layout_gravity="center_horizontal"
                        android:text="状态：领取中"
                        android:textSize="@dimen/text_size_1"/>
                    <TextView
                        android:id="@+id/tv_get_users"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#cbcdcf"
                        android:layout_marginTop="@dimen/distance_8"
                        android:layout_gravity="center_horizontal"
                        android:text="领取人数：1/3"
                        android:textSize="@dimen/text_size_11"/>
                    <TextView
                        android:id="@+id/tv_time_red"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#b4b4b4"
                        android:layout_marginTop="@dimen/distance_9"
                        android:layout_marginBottom="@dimen/distance_19"
                        android:layout_gravity="center_horizontal"
                        android:text="2017-15-45"
                        android:textSize="@dimen/text_size_11"/>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:background="#ffffff"
            android:layout_height="match_parent">
            <ListView
                android:id="@+id/lv_getred"
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/distance_12"
                android:layout_marginRight="@dimen/distance_12"
                android:layout_height="match_parent">
            </ListView>
        </LinearLayout>

    </LinearLayout>

</ScrollView>
</LinearLayout>