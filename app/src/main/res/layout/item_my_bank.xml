<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_marginTop="@dimen/distance_12_5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/distance_10"
        android:layout_marginRight="@dimen/distance_10"
        android:orientation="vertical"
        android:background="@drawable/et_background6">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/distance_7_5"
            android:layout_marginLeft="@dimen/distance_12"
            android:layout_marginRight="@dimen/distance_5"
            android:layout_marginBottom="@dimen/distance_7_5"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:textColor="#3f3f3f"
                android:textSize="@dimen/text_size_4"
                android:text="账号类型"
                android:drawableLeft="@mipmap/tixianjilu_tixian"
                android:drawablePadding="@dimen/distance_10"/>
            <TextView
                android:id="@+id/tv_account_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="#b7b7b7"
                android:textSize="@dimen/text_size_4"
                android:text="中国建设银行" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/distance_7_5"
            android:layout_marginLeft="@dimen/distance_12"
            android:layout_marginRight="@dimen/distance_5"
            android:layout_marginBottom="@dimen/distance_7_5"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:textColor="#3f3f3f"
                android:textSize="@dimen/text_size_4"
                android:text="用户姓名"
                android:drawableLeft="@mipmap/tixianjilu_xinming"
                android:drawablePadding="@dimen/distance_10"/>
            <TextView
                android:id="@+id/tv_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="#b7b7b7"
                android:textSize="@dimen/text_size_4"
                android:text="张三" />

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_account_number"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/distance_7_5"
            android:layout_marginLeft="@dimen/distance_12"
            android:layout_marginRight="@dimen/distance_5"
            android:layout_marginBottom="@dimen/distance_19"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:textColor="#3f3f3f"
                android:textSize="@dimen/text_size_4"
                android:text="收款账号"
                android:drawableLeft="@mipmap/tixianjilu_tixianzhanghu"
                android:drawablePadding="@dimen/distance_10"/>
            <TextView
                android:id="@+id/tv_account_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="#b7b7b7"
                android:textSize="@dimen/text_size_4"
                android:text="2262727627282" />

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:background="#e7e7e7"
            android:layout_height="@dimen/distance_0_5"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/distance_7_5"
            android:layout_marginLeft="@dimen/distance_12"
            android:layout_marginRight="@dimen/distance_5"
            android:layout_marginBottom="@dimen/distance_19"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_clear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="#3f3f3f"
                android:textSize="@dimen/text_size_2"
                android:text="删除"
                android:drawableLeft="@mipmap/shoukuanzhanghao_shanchu"
                android:drawablePadding="@dimen/distance_5"/>
            <TextView
                android:id="@+id/tv_update"
                android:layout_toLeftOf="@id/tv_clear"
                android:layout_marginRight="@dimen/distance_20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ff0000"
                android:textSize="@dimen/text_size_2"
                android:drawableLeft="@mipmap/shoukuanzhanghao_xiugai"
                android:drawablePadding="@dimen/distance_5"
                android:text="修改" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>