<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f2f2f2"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/distance_13"
        android:layout_marginRight="@dimen/distance_13"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/distance_5"
        android:background="@drawable/et_background4"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#454545"
                android:layout_marginLeft="@dimen/distance_13"
                android:layout_marginTop="@dimen/distance_15"
                android:layout_marginBottom="@dimen/distance_15"
                android:textSize="@dimen/text_size_6"
                android:text="@string/_event"
                tools:ignore="RtlHardcoded" />
            <TextView
                android:id="@+id/tv_event_log"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/StatusFColor"
                android:layout_marginLeft="@dimen/distance_5"
                android:layout_marginTop="@dimen/distance_15"
                android:layout_marginBottom="@dimen/distance_15"
                android:textSize="@dimen/text_size_6"
                android:text="@string/_event_log"
                tools:ignore="RtlHardcoded" />
        </LinearLayout>

        <TextView
            android:id="@+id/sign_time"
            style="@style/user_state_item"
            android:text="@string/string_time"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:ignore="DisableBaselineAlignment">
            <LinearLayout
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="@dimen/distance_0"
                android:layout_height="wrap_content">
                <TextView
                    style="@style/user_state_item"
                    android:text="@string/string_coins"/>
                <TextView
                    android:id="@+id/sign_coin"
                    android:textColor="@color/StatusFColor"
                    style="@style/user_state_item"
                    android:text="@string/_9"/>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="@dimen/distance_0"
                android:layout_height="wrap_content">
                <TextView
                    style="@style/user_state_item"
                    android:text="@string/string_experise"/>
                <TextView
                    android:id="@+id/sign_suffer"
                    android:textColor="@color/StatusFColor"
                    style="@style/user_state_item" />
            </LinearLayout>

        </LinearLayout>
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal">
          <TextView
              style="@style/user_state_item"
              android:text="@string/string_balance"/>
          <TextView
              android:id="@+id/sign_balance"
              android:textColor="@color/StatusFColor"
              style="@style/user_state_item" />
      </LinearLayout>


    </LinearLayout>
</RelativeLayout>