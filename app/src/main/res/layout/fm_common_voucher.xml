<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    android:orientation="vertical">
    <LinearLayout
        android:padding="@dimen/distance_0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/distance_25"
        android:layout_marginLeft="@dimen/distance_25"
        android:layout_marginRight="@dimen/distance_25"
        android:background="@drawable/et_background">
        <EditText
            android:id="@+id/card_account"
            android:layout_width="match_parent"
            android:layout_height="@dimen/distance_45"
            android:layout_marginLeft="@dimen/distance_20"
            android:background="@null"
            android:textSize="@dimen/text_size_5"
            android:textColor="#c3c3c3"
            android:hint="@string/_card_account"
            tools:ignore="RtlHardcoded,TextFields" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_pwd"
        android:padding="@dimen/distance_0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/distance_25"
        android:layout_marginRight="@dimen/distance_25"
        android:background="@drawable/et_background2">
        <EditText
            android:id="@+id/card_password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/distance_45"
            android:layout_marginLeft="@dimen/distance_20"
            android:background="@null"
            android:textSize="@dimen/text_size_5"
            android:textColor="#c3c3c3"
            android:hint="@string/_card_password"
            tools:ignore="RtlHardcoded" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/distance_25"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="@dimen/text_size_5"
            android:textColor="#454545"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_caozuo"/>
        <RadioGroup
            android:id="@+id/rg_use_card_type"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/rb_use_card"
                android:textSize="@dimen/text_size_5"
                android:button="@null"
                android:drawableLeft="@drawable/rb_card_drawable_selector"
                android:drawablePadding="@dimen/distance_3"
                android:textColor="#454545"
                android:layout_marginLeft="@dimen/distance_15"
                android:layout_marginRight="@dimen/distance_25"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_use_card"
                tools:ignore="RtlHardcoded" />
            <RadioButton
                android:id="@+id/rb_query_card"
                android:textSize="@dimen/text_size_5"
                android:button="@null"
                android:drawablePadding="@dimen/distance_3"
                android:drawableLeft="@drawable/rb_card_drawable_selector"
                android:textColor="#454545"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_query_card"
                tools:ignore="RtlHardcoded" />
        </RadioGroup>


    </LinearLayout>

    <Button
        android:id="@+id/commit"
        android:layout_marginTop="@dimen/distance_25"
        android:layout_marginBottom="@dimen/distance_25"
        android:layout_marginLeft="@dimen/distance_25"
        android:layout_marginRight="@dimen/distance_25"
        android:background="@drawable/login_btn_background"
        android:textSize="@dimen/text_size_6"
        android:textColor="@color/tv_fp_color"
        android:layout_width="match_parent"
        android:layout_height="@dimen/distance_45"
        android:text="@string/_commit_sub"/>
</LinearLayout>