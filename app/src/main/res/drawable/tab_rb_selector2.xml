<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- 点击 -->
    <item android:state_checked="true">
        <layer-list >
            <item android:left="@dimen/distance_45" android:right="@dimen/distance_45">
                <shape android:shape="rectangle">
                    <stroke android:width="@dimen/distance2_2" android:color="#54ffed"/>
                </shape>
            </item>
            <item android:bottom="@dimen/distance2_2" >
                <shape android:shape="rectangle">
                    <solid android:color="#339ef9"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <!-- 默认 -->
    <item >
        <shape >
            <solid android:color="#339ef9"/>
        </shape>
    </item>
</selector>